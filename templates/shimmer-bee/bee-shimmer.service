[Unit]
Description=SHIMMER-BEE
After=network-online.target

[Service]
EnvironmentFile=-/etc/default/shimmer-bee
WorkingDirectory=/var/lib/shimmer-bee
ExecStart=/usr/bin/shimmer-bee $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutSec=infinity
KillMode=process
Restart=on-failure
RestartSec=100
Type=simple
User=bee
Group=bee
SyslogIdentifier=shimmer-bee

[Install]
WantedBy=multi-user.target