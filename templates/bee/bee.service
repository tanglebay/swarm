[Unit]
Description=Bee
After=network-online.target

[Service]
EnvironmentFile=-/etc/default/bee
WorkingDirectory=/var/lib/bee
ExecStart=/usr/bin/bee $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutSec=infinity
KillMode=process
Restart=on-failure
RestartSec=100
Type=simple
User=bee
Group=bee
SyslogIdentifier=bee

[Install]
WantedBy=multi-user.target