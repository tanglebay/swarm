[Unit]
Description=IOTA-Bee
After=network-online.target

[Service]
EnvironmentFile=-/etc/default/iota-bee
WorkingDirectory=/var/lib/iota-bee
ExecStart=/usr/bin/iota-bee $OPTIONS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutSec=infinity
KillMode=process
Restart=on-failure
RestartSec=100
Type=simple
User=bee
Group=bee
SyslogIdentifier=iota-bee

[Install]
WantedBy=multi-user.target