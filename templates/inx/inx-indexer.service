[Unit]
Description=INX-INDEXER
Wants=network-online.target
After=network-online.target

[Service]
EnvironmentFile=-/etc/default/inx-indexer
LimitNOFILE=8192
SyslogIdentifier=inx
PrivateDevices=yes
PrivateTmp=yes
ProtectSystem=full
ProtectHome=yes

User=inx
WorkingDirectory=/var/lib/inx-indexer
TimeoutSec=1200
Restart=always
ExecStart=/usr/bin/inx-indexer $OPTIONS

[Install]
WantedBy=multi-user.target