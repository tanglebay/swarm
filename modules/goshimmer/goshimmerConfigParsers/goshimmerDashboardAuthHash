#!/bin/bash

if [ -z "$goshimmerDashboardAuthHash" ]; then
    if [ ! -d "/etc/nginx/swarm/goshimmer" ]; then
        sudo mkdir -p /etc/nginx/swarm/goshimmer
    fi
    sudo htpasswd -bcB /etc/nginx/swarm/goshimmer/.htpasswd_dashboard $goshimmerDashboardAuthUsername $goshimmerDashboardAuthPassword > /dev/null 2>&1
    if [ -f "/usr/sbin/nginx" ]; then
        sudo systemctl reload nginx > /dev/null 2>&1
    fi
else
    sudo htpasswd -bcB /etc/nginx/swarm/goshimmer/.htpasswd_dashboard $goshimmerDashboardAuthUsername $goshimmerDashboardAuthPassword > /dev/null 2>&1
    if [ -f "/usr/sbin/nginx" ]; then
        sudo systemctl reload nginx > /dev/null 2>&1
    fi
fi
