#!/bin/bash

shimmerInxPlugins=(inx-dashboard inx-indexer inx-mqtt inx-participation inx-poi)

for shimmerInxPlugin in ${shimmerInxPlugins[@]}
do
    if [ -f "/lib/systemd/system/shimmer-$shimmerInxPlugin.service" ]; then
        sudo systemctl restart shimmer-$shimmerInxPlugin 2>/dev/null
    fi
done

unset shimmerInxPlugins shimmerInxPlugin