#!/bin/bash

while [ $exitCode -lt 1 ]; do
    source $swarmConfigs/shimmer-inx-mqtt.cfg
    clear
    CHOICE=$(
        whiptail --title "INX [SHIMMER] MQTT" --menu "\nChoose an option" 24 65 0 \
        "" "" \
        "1)" "INX-MQTT Info" \
        "2)" "INX-MQTT Configuration" \
        "3)" "INX-MQTT Management" \
        "4)" "INX-MQTT Installer" 3>&2 2>&1 1>&3
    )

    exitstatus=$?
    if [ "$exitstatus" = "1" ]; then
        exitCode=1
    fi

    case $CHOICE in
        "1)")
            source $shimmerInxMqttModule/shimmerInxMqttInfo
        ;;
        "2)")
            while [ $exitCode -lt 1 ]; do
                clear
                CHOICE=$(
                    whiptail --title "INX-MQTT [SHIMMER] Configuration" --menu "\nChoose an option" 24 65 0 \
                    "" "" \
                    "1)" "INX-MQTT Configuration" \
                    "2)" "Advanced Configuration" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        source $shimmerInxMqttModule/shimmerInxMqttConfiguration
                    ;;
                    "2)")
                        while [ $exitCode -lt 1 ]; do
                            clear
                            CHOICE=$(
                                whiptail --title "INX-MQTT [SHIMMER] Configuration" --menu "\nChoose an option" 24 65 0 \
                                "" "" \
                                "1)" "config.json" \
                                "2)" "shimmer-inx-mqtt.cfg (SWARM)" 3>&2 2>&1 1>&3
                            )

                            exitstatus=$?
                            if [ "$exitstatus" = "1" ]; then
                                exitCode=1
                            fi

                            case $CHOICE in
                                "1)")
                                    if [ -f "$shimmerInxMqttHome/config.json" ]; then
                                        sudo $swarmCLEditor $shimmerInxMqttHome/config.json
                                        if (whiptail --title "INX-MQTT [SHIMMER] Configuration" --yesno --defaultno "Would you like to restart INX-MQTT now?" 8 65); then
                                            {
                                                echo 0
                                                echo 50
                                                sudo systemctl restart shimmer-inx-mqtt > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while INX-MQTT is restarting..." 8 65 0
                                        fi
                                    else
                                        whiptail --title "INX-MQTT [SHIMMER] Configuration" --msgbox "INX-MQTT is not installed." 8 65
                                    fi
                                ;;
                                "2)")
                                    sudo $swarmCLEditor $swarmConfigs/shimmer-inx-mqtt.cfg
                                    if [ -f "/usr/bin/inx-mqtt" ]; then
                                        if (whiptail --title "INX-MQTT [SHIMMER] Configuration" --yesno --defaultno "Would you like to restart INX-MQTT now?" 8 65); then
                                            {
                                                echo 0
                                                source $shimmerInxMqttModule/shimmerInxMqttParser
                                                echo 50
                                                sudo systemctl restart shimmer-inx-mqtt > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while INX-MQTT is restarting..." 8 65 0
                                        fi
                                    fi
                                ;;
                            esac
                        done
                        exitCode=0
                    ;;
                esac
            done
            exitCode=0
        ;;
        "3)")
            if [ -f "/usr/bin/shimmer-inx-mqtt" ]; then
                while [ $exitCode -lt 1 ]; do
                    clear
                    CHOICE=$(
                        whiptail --title "INX-MQTT [SHIMMER] Management" --menu "\nChoose an option" 24 65 0 \
                        "" "" \
                        "1)" "Show INX-MQTT log" \
                        "2)" "Stop/Start INX-MQTT" \
                        "3)" "Reset INX-MQTT config" 3>&2 2>&1 1>&3
                    )

                    exitstatus=$?
                    if [ "$exitstatus" = "1" ]; then
                        exitCode=1
                    fi

                    case $CHOICE in
                        "1)")
                            # Display last 65 lines of log
                            sudo journalctl -fu shimmer-inx-mqtt | less -FRSXM
                            clear
                        ;;
                        "2)")
                            while [ $exitCode -lt 1 ]; do
                                CHOICE=$(
                                    whiptail --title "INX-MQTT [SHIMMER] Management" --menu "\nChoose your option" 24 65 0 \
                                    "" "" \
                                    "1)" "Restart INX-MQTT" \
                                    "2)" "Start INX-MQTT" \
                                    "3)" "Stop INX-MQTT" \
                                    "4)" "Status INX-MQTT" 3>&2 2>&1 1>&3
                                )
                                exitStatus=$?
                                if [ "$exitStatus" = "1" ]; then
                                    exitCode=1
                                fi
                                case $CHOICE in
                                    "1)")
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl restart shimmer-inx-mqtt > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while INX-MQTT is restarting..." 8 65 0
                                        whiptail --title "INX-MQTT [SHIMMER] Management" --msgbox "INX-MQTT successfully restarted." 8 65
                                    ;;
                                    "2)")
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl start shimmer-inx-mqtt > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while INX-MQTT is starting..." 8 65 0
                                        whiptail --title "INX-MQTT [SHIMMER] Management" --msgbox "INX-MQTT successfully started." 8 65
                                    ;;
                                    "3)")
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl stop shimmer-inx-mqtt > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while INX-MQTT is stopping..." 8 65 0
                                        whiptail --title "INX-MQTT [SHIMMER] Management" --msgbox "INX-MQTT successfully stopped." 8 65
                                    ;;
                                    "4)")
                                        shimmerInxMqttStatus="$(sudo systemctl status shimmer-inx-mqtt)"
                                        whiptail --title "INX-MQTT [SHIMMER] Management" --msgbox "$shimmerInxMqttStatus" 15 65
                                    ;;
                                esac
                            done
                            exitCode=0
                        ;;
                        "3)")
                            if (whiptail --title "INX-MQTT [SHIMMER] Management" --yesno --defaultno "Are you sure you want to reset the INX-MQTT config file?" 8 65); then
                                source $swarmConfigs/shimmer-inx-mqtt.cfg
                                {
                                    echo 0
                                    echo 20
                                    sudo systemctl stop shimmer-inx-mqtt > /dev/null 2>&1
                                    echo 40
                                    sudo -u inx wget -q -O $shimmerInxMqttHome/config.json https://raw.githubusercontent.com/iotaledger/inx-mqtt/develop/config_template.json
                                    echo 60
                                    source $shimmerInxMqttModule/shimmerInxMqttParser
                                    echo 80
                                    sudo systemctl start shimmer-inx-mqtt > /dev/null 2>&1
                                    echo 100
                                    sleep 0.25
                                } | whiptail --gauge "Please wait while the config reset is running (this may take a while)..." 8 65 0
                                whiptail --title "INX-MQTT [SHIMMER] Debugging" --msgbox "INX-MQTT config successfully reset." 8 65
                            fi
                        ;;
                    esac
                done
                exitCode=0
            else
                whiptail --title "[SHIMMER] INX-MQTT" --msgbox "Sorry, but INX-MQTT is not installed." 8 65
            fi
        ;;
        "4)")
            while [ $exitCode -lt 1 ]; do
                CHOICE=$(
                    whiptail --title "INX-MQTT [SHIMMER] Installer" --menu "\nChoose your option" 24 65 0 \
                    "" "" \
                    "1)" "Update INX-MQTT" \
                    "2)" "Install INX-MQTT" \
                    "3)" "Remove INX-MQTT" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        if [ -f "/usr/bin/shimmer-inx-mqtt" ]; then
                            if (whiptail --title "INX-MQTT [SHIMMER] Installer" --yesno --defaultno "Do you really want to update INX-MQTT?" 8 65); then
                                # Update INX-Mqtt
                                source $shimmerInxMqttModule/shimmerInxMqttVersion
                                if [ ! -z "$latestShimmerInxMqttVersion" ]; then
                                    {
                                        echo 0
                                        echo 33
                                        source $shimmerInxMqttModule/shimmerInxMqttVersion
                                        echo 66
                                        source $shimmerInxMqttModule/shimmerInxMqttInstaller                      
                                        echo 100
                                        sleep 0.5
                                    } | whiptail --gauge "Please wait while INX-MQTT is updated..." 8 65 0
                                    {
                                        # CALL MODULE CONFIGPARSER
                                        source $shimmerInxMqttModule/shimmerInxMqttParser
                                        sudo systemctl restart shimmer-inx-mqtt 2>/dev/null
                                    } | whiptail --gauge "Please wait while parsing the configuration..." 8 65 0
                                    shimmerInxMqttChecksum=$(cat /tmp/shimmer-inx-mqtt.checksum 2>/dev/null)
                                    whiptail --title "INX-Mqtt [SHIMMER] Installer" --msgbox "INX-Mqtt successfully updated.\n\nChecksum: $shimmerInxMqttChecksum" 10 65
                                    if [ -f "/tmp/shimmer-inx-mqtt.checksum" ]; then
                                        sudo rm -rf /tmp/shimmer-inx-mqtt.checksum 2>/dev/null
                                        unset shimmerInxMqttChecksum
                                    fi
                                else
                                    whiptail --title "INX [SHIMMER] MQTT" --msgbox "Sorry, but INX-MQTT update aborted." 8 65
                                fi
                            fi
                        else
                            whiptail --title "INX [SHIMMER] MQTT" --msgbox "Sorry, but INX-MQTT is not installed." 8 65
                        fi
                    ;;
                    "2)")
                        if [ -f "/usr/bin/shimmer-hornet" ]; then
                            # INSTALL INX-MQTT
                            if [ ! -f "/usr/bin/shimmer-inx-mqtt" ]; then
                                source $swarmConfigs/shimmer-inx-mqtt.cfg
                                source $shimmerInxMqttModule/shimmerInxMqttVersion
                                {
                                    echo 0
                                    echo 20
                                    source $shimmerInxMqttModule/shimmerInxMqttInstaller
                                    echo 40
                                    if [ -f "/usr/bin/shimmer-inx-mqtt" ]; then
                                        source $swarmConfigs/shimmer-inx-mqtt.cfg
                                        echo 50
                                        # CALL MODULE CONFIGPARSER
                                        source $shimmerInxMqttModule/shimmerInxMqttParser
                                        echo 60
                                        sudo systemctl start shimmer-inx-mqtt > /dev/null 2>&1
                                        echo 70
                                        sleep 2
                                        shimmerInxMqttStatus="$(systemctl show -p ActiveState --value shimmer-inx-mqtt)"
                                        if [ "$shimmerInxMqttStatus" != "active" ]; then
                                            sudo systemctl restart shimmer-inx-mqtt > /dev/null 2>&1
                                        fi
                                        echo 80
                                        source $proxyModule/proxyAutomaticDeployment
                                        echo 100
                                    fi
                                } | whiptail --gauge "Please wait while installing INX-MQTT..." 8 65 0
                                if [ -f "/usr/bin/shimmer-inx-mqtt" ]; then
                                    if [ -f "/tmp/shimmer-inx-mqtt.checksum" ]; then
                                        shimmerInxMqttChecksum=$(cat /tmp/shimmer-inx-mqtt.checksum)
                                    fi
                                    whiptail --title "INX-MQTT [SHIMMER] Installer" --msgbox "INX-MQTT installation finished!\n\nChecksum: $shimmerInxMqttChecksum" 17 65
                                    if [ -f "/tmp/shimmer-inx-mqtt.checksum" ]; then
                                        sudo rm -rf /tmp/shimmer-inx-mqtt.checksum > /dev/null 2>&1
                                    fi
                                else
                                    {
                                        echo 0
                                        echo 25
                                        source $swarmConfigs/shimmer-inx-mqtt.cfg
                                        echo 50
                                        source $shimmerInxMqttModule/shimmerInxMqttRemoval
                                        echo 75
                                        echo 100
                                    } | whiptail --gauge "Please wait while the INX-MQTT files are removed...." 8 65 0
                                    whiptail --title "INX-MQTT [SHIMMER] Installer" --msgbox "Error while installing INX-MQTT! Please try again later." 8 65
                                fi
                            else
                                if [ -f "/usr/bin/shimmer-inx-mqtt" ]; then
                                    whiptail --title "INX-MQTT [SHIMMER] Installer" --msgbox "INX-MQTT already installed." 8 65
                                else
                                    if [ "$shimmerInxMqttSkipInstallation" = "true" ]; then
                                        whiptail --title "INX-MQTT [SHIMMER] Installer" --msgbox "Installation of INX-MQTT aborted." 8 65
                                    fi
                                fi
                            fi
                            unset shimmerInxMqttSkipInstallation shimmerInxMqttChecksum
                        else
                            whiptail --title "INX [SHIMMER] MQTT" --msgbox "To be able to install INX-MQTT, a compatible node must be installed first." 8 65
                        fi
                    ;;
                    "3)")
                        if (whiptail --title "INX-MQTT [SHIMMER] Installer" --yesno --defaultno "Do you really want to remove INX-MQTT?" 8 65); then
                            {
                                echo 0
                                echo 50
                                source $shimmerInxMqttModule/shimmerInxMqttRemoval
                                echo 100
                                sleep 0.5
                            } | whiptail --gauge "Please wait while INX-MQTT will be removed..." 8 65 0
                            whiptail --title "INX-MQTT [SHIMMER] Installer" --msgbox "INX-MQTT successfully removed." 8 65
                        fi
                    ;;
                esac
            done
            exitCode=0
        ;;
    esac
done
exitCode=0