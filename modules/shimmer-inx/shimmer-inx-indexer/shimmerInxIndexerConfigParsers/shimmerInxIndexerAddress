#!/bin/bash

parser=$(jq '.indexer.bindAddress' $shimmerInxIndexerHome/$shimmerInxIndexerConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:9092" ]; then
    sudo jq '.indexer.bindAddress = "localhost:9092"' $shimmerInxIndexerHome/$shimmerInxIndexerConfig.json|sponge $shimmerInxIndexerHome/$shimmerInxIndexerConfig.json
    restartShimmerInxIndexer=true
    echo "shimmerInxIndexerAddress" >> /tmp/shimmerInxIndexerParsing
fi
