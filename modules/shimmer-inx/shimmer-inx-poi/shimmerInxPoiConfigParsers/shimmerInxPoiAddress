#!/bin/bash

parser=$(jq '.poi.bindAddress' $shimmerInxPoiHome/$shimmerInxPoiConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$shimmerInxPoiAddress" ]; then
    sudo jq '.poi.bindAddress = "'$shimmerInxPoiAddress'"' $shimmerInxPoiHome/$shimmerInxPoiConfig.json|sponge $shimmerInxPoiHome/$shimmerInxPoiConfig.json
    restartShimmerInxPoi=true
    echo "shimmerInxPoiAddress" >> /tmp/shimmerInxPoiParsing
fi
