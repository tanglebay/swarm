#!/bin/bash

useShimmerInxDashboardEnablePlugins=true
source $shimmerInxDashboardModules/shimmerInxDashboardPlugins

IFS=', ' read -r -a ARRAYshimmerInxDashboardEnablePlugins <<< "$shimmerInxDashboardEnablePlugins"

parser="$(jq '.app.enablePlugins' $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json)"
parser="$(echo $parser | tr -d '[]" ')"
if [ "$parser" != "$shimmerInxDashboardEnablePlugins" ]; then
    sudo jq '.app.enablePlugins |= []' $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json|sponge $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json
    for shimmerInxDashboardEnablePlugin in "${ARRAYshimmerInxDashboardEnablePlugins[@]}"
    do
        if [ ! -z "$shimmerInxDashboardEnablePlugin" ]; then
            sudo jq '.app.enablePlugins |= .+ ["'$shimmerInxDashboardEnablePlugin'"]' $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json|sponge $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json
        fi
    done
    restartShimmerInxDashboard=true
    echo "shimmerInxDashboardEnablePlugins" >> /tmp/shimmerInxDashboardParsing
fi

unset ARRAYshimmerInxDashboardEnablePlugins shimmerInxDashboardEnablePlugin useShimmerInxDashboardEnablePlugins
