#!/bin/bash

parser="$(jq '.app.alias' $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$shimmerInxDashboardAlias" != "$parser" ]; then
    if [ ! -z "$shimmerInxDashboardAlias" ]; then
        sudo jq --arg shimmerInxDashboardAlias "$shimmerInxDashboardAlias" '.app.alias = ($shimmerInxDashboardAlias)' $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json|sponge $shimmerInxDashboardHome/$shimmerInxDashboardConfig.json
        restartShimmerInxDashboard=true
        newShimmerInxDashboardAlias=true
        echo "shimmerInxDashboardAlias" >> /tmp/shimmerInxDashboardParsing
    fi
fi