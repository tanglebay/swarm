#!/bin/bash

parser=$(jq '.mqtt.tcp.bindAddress' $inxMqttHome/$inxMqttConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxMqttTcpAddress" ]; then
    sudo jq '.mqtt.tcp.bindAddress = "'$inxMqttTcpAddress'"' $inxMqttHome/$inxMqttConfig.json|sponge $inxMqttHome/$inxMqttConfig.json
    restartInxMqtt=true
    echo "inxMqttTcpAddress" >> /tmp/inxMqttParsing
fi
