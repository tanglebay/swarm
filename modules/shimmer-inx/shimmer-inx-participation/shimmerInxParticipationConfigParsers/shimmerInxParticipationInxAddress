#!/bin/bash

parser=$(jq '.inx.address' $shimmerInxParticipationHome/$shimmerInxParticipationConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$shimmerInxParticipationInxAddress" ]; then
    sudo jq '.inx.address = "'$shimmerInxParticipationInxAddress'"' $shimmerInxParticipationHome/$shimmerInxParticipationConfig.json|sponge $shimmerInxParticipationHome/$shimmerInxParticipationConfig.json
    restartShimmerInxParticipation=true
    echo "shimmerInxParticipationInxAddress" >> /tmp/shimmerInxParticipationParsing
fi
