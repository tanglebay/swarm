#!/bin/bash

parser=$(jq '.restAPI.bindAddress' $shimmerInxIrcMetadataHome/$shimmerInxIrcMetadataConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:9688" ]; then
    sudo jq '.restAPI.bindAddress = "localhost:9788"' $shimmerInxIrcMetadataHome/$shimmerInxIrcMetadataConfig.json|sponge $shimmerInxIrcMetadataHome/$shimmerInxIrcMetadataConfig.json
    restartShimmerInxIrcMetadata=true
    echo "shimmerInxIrcMetadataApiAddress" >> /tmp/shimmerInxIrcMetadataParsing
fi
