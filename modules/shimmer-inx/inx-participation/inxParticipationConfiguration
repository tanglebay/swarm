#!/bin/bash
while [ $exitCode -lt 1 ]; do
    clear
    source $swarmConfigs/inx-participation.cfg
    if [ "$inxParticipationUpdateCheck" = "true" ]; then
        menuInxParticipationUpdateCheck="Disable"
    else
        menuInxParticipationUpdateCheck="Enable"
    fi
    source $inxParticipationModules/inxParticipationConfigs
    CHOICE=$(
        whiptail --title "INX-Participation - Configurations" --menu "\nChoose an option" 24 65 0 \
        "1)" "INX Address" \
        "2)" "Enable Plugins" \
        "3)" "Disable Plugins" \
        "4)" "$menuInxParticipationUpdateCheck update check" 3>&2 2>&1 1>&3
    )

    exitstatus=$?
    if [ "$exitstatus" = "1" ]; then
        exitCode=1
        if [ "$restartInxParticipation" = "true" ] && [ -f "/usr/bin/inx-participation" ]; then
            if (whiptail --title "INX-Participation - Menu" --yesno "Would you like to apply the changes and restart INX-Participation?" 8 65); then
                {
                    echo 0
                    echo 33
                    source $inxParticipationModules/inxParticipationParser
                    echo 50
                    sudo systemctl restart inx-participation > /dev/null 2>&1
                    sleep 0.25
                    echo 100
                    sleep 0.25
                } | whiptail --gauge "Please wait while the changes are applied and INX-Participation is restarted..." 8 65 0
                unset restartInxParticipation
            fi
        fi
    fi

    case $CHOICE in
        "1)")
            source $swarmConfigs/inx-participation.cfg
            inxParticipationInxAddress=$(whiptail --inputbox "\nSet the address of the INX interface" 10 65 $inxParticipationInxAddress --title "INX-Participation - INX Address" 3>&1 1>&2 2>&3)
            exitStatus=$?
            if [ $exitStatus != 1 ]; then
                if [ ! -z "$inxParticipationInxAddress" ] && [[ $inxParticipationInxAddress =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+:+[0-9]+|^localhost:[0-9]+$ ]]; then
                    source $inxParticipationConfigParsers/inxParticipationInxAddress
                    if [ "$newInxParticipationInxAddress" = "true" ]; then
                        sudo sed -i 's/^inxParticipationInxAddress=.*/inxParticipationInxAddress="'$inxParticipationInxAddress'"/' $swarmConfigs/inx-participation.cfg
                        whiptail --title "INX-Participation - INX Address" --msgbox "New INX address \"$inxParticipationInxAddress\" applied!" 8 65
                        unset newInxParticipationInxAddress
                    else
                        whiptail --title "INX-Participation - INX Address" --msgbox "No INX address change detected." 8 65
                    fi
                else
                    whiptail --title "INX-Participation - INX Address" --msgbox "No valid INX address, please try again." 8 65
                fi
            fi
        ;;
        "2)")
            useInxParticipationEnablePlugins=true
            source $swarmConfigs/inx-participation.cfg
            currentInxParticipationEnablePlugins=$inxParticipationEnablePlugins
            source $inxParticipationModules/inxParticipationPlugins
            inxParticipationEnablePlugins=$(whiptail --title "INX-Participation - Plugins" --checklist "\nSelect (with spacebar) the INX-Participation plugins to be activated:" 24 65 1 \
                "Prometheus" "plugin for metrics (e.g. Grafana)" $inxParticipationPluginPrometheus 3>&1 1>&2 2>&3)
            exitStatus=$?
            inxParticipationEnablePlugins=$(echo $inxParticipationEnablePlugins | tr '[:upper:]' '[:lower:]' | tr -s '[:blank:]' ',' | tr -d '"')
            if [ -z "$inxParticipationEnablePlugins" ] || [[ $inxParticipationEnablePlugins = *prometheus* ]]; then
                if [ "$inxParticipationEnablePlugins" != "$currentInxParticipationEnablePlugins" ] && [ "$exitStatus" != "1" ]; then
                    if [ -f "/usr/bin/inx-participation" ]; then
                        source $inxParticipationConfigParsers/inxParticipationEnablePlugins
                    fi
                    sudo sed -i 's/^inxParticipationEnablePlugins=.*/inxParticipationEnablePlugins="'$inxParticipationEnablePlugins'"/' $swarmConfigs/inx-participation.cfg
                    if [ ! -z "$inxParticipationEnablePlugins" ]; then
                        whiptail --title "INX-Participation - Plugins" --msgbox "The following plugins are enabled:\n$inxParticipationEnablePlugins" 14 65
                    else
                        whiptail --title "INX-Participation - Plugins" --msgbox "There are no plugins enabled for INX-Participation!" 8 65
                    fi
                fi
                unset inxParticipationEnablePlugins
            fi
            unset useInxParticipationEnablePlugins
        ;;
        "3)")
            useInxParticipationDisablePlugins=true
            source $swarmConfigs/inx-participation.cfg
            currentInxParticipationDisablePlugins=$inxParticipationDisablePlugins
            source $inxParticipationModules/inxParticipationPlugins
            inxParticipationDisablePlugins=$(whiptail --title "INX-Participation - Plugins" --checklist "\nSelect (with spacebar) the INX-Participation plugins to be deactivated:" 24 65 1 \
                "Prometheus" "plugin for metrics (e.g. Grafana)" $inxParticipationPluginPrometheus 3>&1 1>&2 2>&3)
            exitStatus=$?
            inxParticipationDisablePlugins=$(echo $inxParticipationDisablePlugins | tr '[:upper:]' '[:lower:]' | tr -s '[:blank:]' ',' | tr -d '"')
            if [ -z "$inxParticipationDisablePlugins" ] || [[ $inxParticipationDisablePlugins = *warpsync* ]]; then
                if [ "$inxParticipationDisablePlugins" != "$currentInxParticipationDisablePlugins" ] && [ "$exitStatus" != "1" ]; then
                    if [ -f "/usr/bin/inx-participation" ]; then
                        source $inxParticipationConfigParsers/inxParticipationDisablePlugins
                    fi
                    sudo sed -i 's/^inxParticipationDisablePlugins=.*/inxParticipationDisablePlugins="'$inxParticipationDisablePlugins'"/' $swarmConfigs/inx-participation.cfg
                    if [ ! -z "$inxParticipationDisablePlugins" ]; then
                        whiptail --title "INX-Participation - Plugins" --msgbox "The following plugins are disabled:\n$inxParticipationDisablePlugins" 14 65
                    else
                        whiptail --title "INX-Participation - Plugins" --msgbox "There are no plugins disabled for INX-Participation!" 8 65
                    fi
                fi
            else
                unset inxParticipationDisablePlugins
            fi
            unset useInxParticipationDisablePlugins
        ;;
        "4)")
            source $swarmConfigs/inx-participation.cfg
            if [ "$inxParticipationUpdateCheck" = "true" ]; then
                inxParticipationUpdateCheckStatus="enabled"
            else
                inxParticipationUpdateCheckStatus="disabled"
            fi
            if (whiptail --title "INX-Participation - Update Check" --yesno "Would you like to \"$inxParticipationUpdateCheckStatus\" update check?" 8 65); then
                if [ "$inxParticipationUpdateCheck" = "true" ]; then
                    inxParticipationUpdateCheck=false
                else
                    inxParticipationUpdateCheck=true
                fi
                source $inxParticipationConfigParsers/inxParticipationUpdateCheck
                sudo sed -i 's~^inxParticipationUpdateCheck=.*~inxParticipationUpdateCheck='$inxParticipationUpdateCheck'~g' $swarmConfigs/inx-participation.cfg
            fi
        ;;
    esac
done
sudo chown -R inx:inx $inxParticipationHome/*.json
exitCode=0