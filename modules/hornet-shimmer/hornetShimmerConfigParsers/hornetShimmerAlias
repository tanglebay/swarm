#!/bin/bash

parser="$(jq '.node.alias' $hornetShimmerHome/$hornetShimmerConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$hornetShimmerAlias" != "$parser" ]; then
    if [ ! -z "$hornetShimmerAlias" ]; then
        sudo jq --arg hornetShimmerAlias "$hornetShimmerAlias" '.node.alias = ($hornetShimmerAlias)' $hornetShimmerHome/$hornetShimmerConfig.json|sponge $hornetShimmerHome/$hornetShimmerConfig.json
        restartHornetShimmer=true
        newHornetShimmerAlias=true
        echo "hornetShimmerAlias" >> /tmp/hornetShimmerParsing
    fi
fi