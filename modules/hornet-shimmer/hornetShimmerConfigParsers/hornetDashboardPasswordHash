#!/bin/bash
if [ ! -z "$hornetShimmerPasswordHash" ]; then
    parser="$(jq '.dashboard.auth.passwordHash' $hornetShimmerHome/$hornetShimmerConfig.json)"
    parser=$(echo $parser | tr -d '"')
    if [ "$hornetShimmerPasswordHash" != "$parser" ]; then
        sudo jq '.dashboard.auth.passwordHash = "'$hornetShimmerPasswordHash'"' $hornetShimmerHome/$hornetShimmerConfig.json|sponge $hornetShimmerHome/$hornetShimmerConfig.json
        restartHornet=true
        echo "hornetDashboardPasswordHash" >> /tmp/hornetShimmerParsing
    fi
fi