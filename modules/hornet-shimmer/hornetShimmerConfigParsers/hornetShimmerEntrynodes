#!/bin/bash
if [ "$hornetNetwork" = "mainnet" ]; then
    parser="$(jq '.p2p.autopeering.entryNodes' $hornetShimmerHome/config.json)"
    hornetShimmerEntryNodeOld="/dns/entry-0.shimmernet.tanglebay.com/udp/14636/autopeering/iot4By1FD4pFLrGJ6AAe7YEeSu9RbW9xnPUmxMdQenC"
    if [[ $parser = *$hornetShimmerEntryNodeOld* ]]; then
        hornetShimmerEntryNode="/dns/entry-0.shimmer-mainnet.tanglebay.com/udp/14636/autopeering/iot4By1FD4pFLrGJ6AAe7YEeSu9RbW9xnPUmxMdQenC"
        sudo sudo sed -i 's~'$hornetShimmerEntryNodeOld'~'$hornetShimmerEntryNode'~g' $hornetShimmerHome/config.json
        restartHornetShimmer=true
        echo "hornetShimmerEntrynodes" >> /tmp/hornetShimmerParsing
    fi
    hornetShimmerEntryNodeOld="/dns/entry-1.shimmernet.tanglebay.com/udp/14626/autopeering/CATsx21mFVvQQPXeDineGs9DDeKvoBBQdzcmR6ffCkVA"
    if [[ $parser = *$hornetShimmerEntryNodeOld* ]]; then
        hornetShimmerEntryNode="/dns/entry-1.shimmer-mainnet.tanglebay.com/udp/14626/autopeering/CATsx21mFVvQQPXeDineGs9DDeKvoBBQdzcmR6ffCkVA"
        sudo sudo sed -i 's~'$hornetShimmerEntryNodeOld'~'$hornetShimmerEntryNode'~g' $hornetShimmerHome/config.json
        restartHornetShimmer=true
        echo "hornetShimmerEntrynodes" >> /tmp/hornetShimmerParsing
    fi
    unset hornetShimmerEntryNodeOld
    ####################################################################################################################################################
    parser="$(jq '.p2p.autopeering.entryNodes' $hornetShimmerHome/config.json)"
    hornetShimmerEntryNode="/dns/entry-0.shimmer-mainnet.tanglebay.com/udp/14636/autopeering/iot4By1FD4pFLrGJ6AAe7YEeSu9RbW9xnPUmxMdQenC"
    if [[ $parser != *$hornetShimmerEntryNode* ]]; then
        sudo jq '.p2p.autopeering.entryNodes |= .+ ["'$hornetShimmerEntryNode'"]' $hornetShimmerHome/config.json|sponge $hornetShimmerHome/config.json
        restartHornetShimmer=true
        echo "hornetShimmerEntrynodes" >> /tmp/hornetShimmerParsing
    fi
    hornetShimmerEntryNode="/dns/entry-1.shimmer-mainnet.tanglebay.com/udp/14626/autopeering/CATsx21mFVvQQPXeDineGs9DDeKvoBBQdzcmR6ffCkVA"
    if [[ $parser != *$hornetShimmerEntryNode* ]]; then
        sudo jq '.p2p.autopeering.entryNodes |= .+ ["'$hornetShimmerEntryNode'"]' $hornetShimmerHome/config.json|sponge $hornetShimmerHome/config.json
        restartHornetShimmer=true
        echo "hornetShimmerEntrynodes" >> /tmp/hornetShimmerParsing
    fi
    unset parser hornetShimmerEntryNode
fi