#!/bin/bash

if [ ! -s "$hornetShimmerHome/$hornetShimmerConfig.json" ]; then
    if [ "$hornetShimmerRelease" = "stable" ]; then
        if [ -f "$hornetShimmerHome/$hornetShimmerConfig.json" ]; then
            sudo chown hornet:hornet $hornetShimmerHome/$hornetShimmerConfig.json > /dev/null 2>&1
        fi
        sudo -u hornet wget -q -O $hornetShimmerHome/$hornetShimmerConfig.json https://raw.githubusercontent.com/iotaledger/hornet/shimmernet/$hornetShimmerConfig.json
    else
        if [ -f "$hornetShimmerHome/$hornetShimmerConfig.json" ]; then
            sudo chown hornet:hornet $hornetShimmerHome/$hornetShimmerConfig.json > /dev/null 2>&1
        fi
        sudo -u hornet wget -q -O $hornetShimmerHome/$hornetShimmerConfig.json https://raw.githubusercontent.com/iotaledger/hornet/develop/$hornetShimmerConfig.json
    fi
fi

if [ -f "/tmp/hornetShimmerParsing" ]; then
    sudo rm -rf /tmp/hornetShimmerParsing > /dev/null 2>&1
fi