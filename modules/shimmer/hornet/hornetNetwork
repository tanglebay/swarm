#!/bin/bash

# Check if network changed
if [ "$shimmerHornetNetwork" != "$currentShimmerHornetNetwork" ]; then
    if [ "$shimmerHornetNetwork" = "mainnet" ] || [ "$shimmerHornetNetwork" = "alphanet" ]; then
        echo "OPTIONS=\"--config config.json\"" > /etc/default/shimmer-hornet
    fi
    if [ "$shimmerHornetNetwork" = "devnet" ]; then
        echo "OPTIONS=\"--config config_devnet.json\"" > /etc/default/shimmer-hornet
    fi
    sudo rm -rf $shimmerHornetHome/$currentShimmerHornetNetwork
    source $shimmerHornetConfigParsers/hornetIdentity
    restartShimmerHornet=true
    newShimmerHornetApiJwtToken=true
    whiptail --title "Hornet Shimmer - Configuration" --msgbox "Hornet was successfully changed to the $shimmerHornetNetwork network!" 8 65
fi