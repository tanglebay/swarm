#!/bin/bash

parser="$(jq '.p2p.autopeering.runAsEntryNode' $hornetShimmerHome/$hornetShimmerConfig.json)"
if [ "$hornetShimmerRunAsEntryNode" = "true" ] || [ "$hornetShimmerRunAsEntryNode" = "false" ]; then
    if [ "$parser" != "$hornetShimmerRunAsEntryNode" ]; then
        sudo jq '.p2p.autopeering.runAsEntryNode = '$hornetShimmerRunAsEntryNode'' $hornetShimmerHome/$hornetShimmerConfig.json|sponge $hornetShimmerHome/$hornetShimmerConfig.json
        restartShimmerHornet=true
        echo "hornetShimmerRunAsEntryNode" >> /tmp/hornetShimmerParsing
    fi
fi