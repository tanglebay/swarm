#!/bin/bash

useShimmerHornetEnablePlugins=true
source $shimmerHornetModules/hornetPlugins

IFS=', ' read -r -a ARRAYshimmerHornetEnablePlugins <<< "$shimmerHornetEnablePlugins"

parser="$(jq '.app.enablePlugins' $shimmerHornetHome/$shimmerHornetConfig.json)"
parser="$(echo $parser | tr -d '[]" ')"
if [ "$parser" != "$shimmerHornetEnablePlugins" ]; then
    sudo jq '.app.enablePlugins |= []' $shimmerHornetHome/$shimmerHornetConfig.json|sponge $shimmerHornetHome/$shimmerHornetConfig.json
    for shimmerHornetEnablePlugin in "${ARRAYshimmerHornetEnablePlugins[@]}"
    do
        if [ ! -z "$shimmerHornetEnablePlugin" ]; then
            sudo jq '.app.enablePlugins |= .+ ["'$shimmerHornetEnablePlugin'"]' $shimmerHornetHome/$shimmerHornetConfig.json|sponge $shimmerHornetHome/$shimmerHornetConfig.json
        fi
    done
    restartShimmerHornet=true
    echo "shimmerHornetEnablePlugins" >> /tmp/shimmerHornetParsing
fi

unset ARRAYshimmerHornetEnablePlugins shimmerHornetEnablePlugin useShimmerHornetEnablePlugins
