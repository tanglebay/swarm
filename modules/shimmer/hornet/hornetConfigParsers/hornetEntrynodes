#!/bin/bash
if [ "$shimmerHornetNetwork" = "mainnet" ] || [ "$shimmerHornetNetwork" = "alphanet" ]; then
    parser="$(jq '.p2p.autopeering.entryNodes' $shimmerHornetHome/config.json)"
    shimmerHornetEntryNodeOld="/dns/entry-0.shimmernet.tanglebay.com/udp/14636/autopeering/iot4By1FD4pFLrGJ6AAe7YEeSu9RbW9xnPUmxMdQenC"
    if [[ $parser = *$shimmerHornetEntryNodeOld* ]]; then
        shimmerHornetEntryNode="/dns/entry-0.shimmer-mainnet.tanglebay.com/udp/14676/autopeering/22aGL1rL7yh4emm1CSN5XyVXYC15GehZok3hNYHtMMnw"
        sudo sudo sed -i 's~'$shimmerHornetEntryNodeOld'~'$shimmerHornetEntryNode'~g' $shimmerHornetHome/config.json
        restartShimmerHornet=true
        echo "shimmerHornetEntrynodes" >> /tmp/shimmerHornetParsing
    fi
    shimmerHornetEntryNodeOld="/dns/entry-1.shimmer-mainnet.tanglebay.com/udp/14656/autopeering/CvF69T6NbVstwu6NfLVQHcDS1Dsd8XxCMTDHNC2rvJTZ"
    if [[ $parser = *$shimmerHornetEntryNodeOld* ]]; then
        shimmerHornetEntryNode="/dns/entry-1.shimmer-mainnet.tanglebay.com/udp/14626/autopeering/CATsx21mFVvQQPXeDineGs9DDeKvoBBQdzcmR6ffCkVA"
        sudo sudo sed -i 's~'$shimmerHornetEntryNodeOld'~'$shimmerHornetEntryNode'~g' $shimmerHornetHome/config.json
        restartShimmerHornet=true
        echo "shimmerHornetEntrynodes" >> /tmp/shimmerHornetParsing
    fi
    unset shimmerHornetEntryNodeOld
    ####################################################################################################################################################
    parser="$(jq '.p2p.autopeering.entryNodes' $shimmerHornetHome/config.json)"
    shimmerHornetEntryNode="/dns/entry-0.shimmer-mainnet.tanglebay.com/udp/14676/autopeering/22aGL1rL7yh4emm1CSN5XyVXYC15GehZok3hNYHtMMnw"
    if [[ $parser != *$shimmerHornetEntryNode* ]]; then
        sudo jq '.p2p.autopeering.entryNodes |= .+ ["'$shimmerHornetEntryNode'"]' $shimmerHornetHome/config.json|sponge $shimmerHornetHome/config.json
        restartShimmerHornet=true
        echo "shimmerHornetEntrynodes" >> /tmp/shimmerHornetParsing
    fi
    shimmerHornetEntryNode="/dns/entry-1.shimmer-mainnet.tanglebay.com/udp/14656/autopeering/CvF69T6NbVstwu6NfLVQHcDS1Dsd8XxCMTDHNC2rvJTZ"
    if [[ $parser != *$shimmerHornetEntryNode* ]]; then
        sudo jq '.p2p.autopeering.entryNodes |= .+ ["'$shimmerHornetEntryNode'"]' $shimmerHornetHome/config.json|sponge $shimmerHornetHome/config.json
        restartShimmerHornet=true
        echo "shimmerHornetEntrynodes" >> /tmp/shimmerHornetParsing
    fi
    unset parser shimmerHornetEntryNode
fi