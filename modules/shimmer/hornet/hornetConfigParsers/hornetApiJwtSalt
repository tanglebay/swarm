#!/bin/bash

parser="$(jq '.restAPI.jwtAuth.salt' $hornetShimmerHome/$hornetShimmerConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$hornetApiJwtSalt" != "$parser" ]; then
    if [ ! -z "$hornetApiJwtSalt" ] 2>/dev/null; then
        sudo jq '.restAPI.jwtAuth.salt = "'$hornetApiJwtSalt'"' $hornetShimmerHome/$hornetShimmerConfig.json|sponge $hornetShimmerHome/$hornetShimmerConfig.json
        restartShimmerHornet=true
        newShimmerHornetApiJwtToken=true
        echo "hornetShimmerApiJwtSalt" >> /tmp/hornetShimmerParsing
    fi
fi