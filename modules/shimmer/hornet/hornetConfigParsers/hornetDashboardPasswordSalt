#!/bin/bash
if [ ! -z "$shimmerHornetPasswordSalt" ]; then
    parser="$(jq '.dashboard.auth.passwordSalt' $shimmerHornetHome/$shimmerHornetConfig.json)"
    parser=$(echo $parser | tr -d '"')
    if [ "$shimmerHornetPasswordSalt" != "$parser" ]; then
        sudo jq '.dashboard.auth.passwordSalt = "'$shimmerHornetPasswordSalt'"' $shimmerHornetHome/$shimmerHornetConfig.json|sponge $shimmerHornetHome/$shimmerHornetConfig.json
        restartShimmerHornet=true
        echo "shimmerHornetDashboardPasswordSalt" >> /tmp/shimmerHornetParsing
    fi
fi