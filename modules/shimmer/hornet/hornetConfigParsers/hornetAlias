#!/bin/bash

parser="$(jq '.app.alias' $hornetShimmerHome/$hornetShimmerConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$hornetShimmerAlias" != "$parser" ]; then
    if [ ! -z "$hornetShimmerAlias" ]; then
        sudo jq --arg hornetShimmerAlias "$hornetShimmerAlias" '.app.alias = ($hornetShimmerAlias)' $hornetShimmerHome/$hornetShimmerConfig.json|sponge $hornetShimmerHome/$hornetShimmerConfig.json
        restartShimmerHornet=true
        newShimmerHornetAlias=true
        echo "hornetShimmerAlias" >> /tmp/hornetShimmerParsing
    fi
fi