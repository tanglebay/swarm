#!/bin/bash

parser="$(jq '.pruning.size.enabled' $hornetShimmerHome/$hornetShimmerConfig.json)"
if [ "$parser" != "$hornetShimmerPruningEnabled" ]; then
    if [ "$hornetShimmerPruningEnabled" = "true" ] || [ "$hornetPruningEnabled" = "false" ]; then
        sudo jq '.pruning.size.enabled = '$hornetShimmerPruningEnabled'' $hornetShimmerHome/$hornetShimmerConfig.json|sponge $hornetShimmerHome/$hornetShimmerConfig.json
        restartShimmerHornet=true
        echo "hornetShimmerPruningEnabled" >> /tmp/hornetShimmerParsing
    fi
fi