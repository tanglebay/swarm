#!/bin/bash

parser=$(jq '.p2p.autopeering.bindAddress' $hornetShimmerHome/$hornetShimmerConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "0.0.0.0:$hornetShimmerAutopeeringPort" ] && [ $hornetShimmerAutopeeringPort -eq $hornetShimmerAutopeeringPort ] && [ "$hornetShimmerAutopeeringPort" -gt 0 ] 2>/dev/null; then
    sudo jq '.p2p.autopeering.bindAddress = "0.0.0.0:'$hornetShimmerAutopeeringPort'"' $hornetShimmerHome/$hornetShimmerConfig.json|sponge $hornetShimmerHome/$hornetShimmerConfig.json
    restartHornetShimmer=true
    echo "hornetShimmerAutopeeringPort" >> /tmp/hornetShimmerParsing
fi