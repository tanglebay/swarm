#!/bin/bash

parser="$(jq '.restApi.bindAddress' $shimmerBeeHome/$shimmerBeeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp14268" ]; then
    sudo jq '.restApi.bindAddress = "/ip4/0.0.0.0/tcp/14268"' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeeRestApiPort" >> /tmp/shimmerBeeParsing
fi

unset parser
