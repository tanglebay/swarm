#!/bin/bash

parser="$(jq '.autopeering.enabled' $shimmerBeeHome/$shimmerBeeConfig.json)"
if [ "$parser" != "$shimmerBeeAutopeeringEnabled" ] && [ ! -z "$shimmerBeeAutopeeringEnabled" ]; then
    sudo jq '.autopeering.enabled = '$shimmerBeeAutopeeringEnabled'' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeeAutopeering1" >> /tmp/shimmerBeeParsing
fi
parser="$(jq '.autopeering.bindAddress' $shimmerBeeHome/$shimmerBeeConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "0.0.0.0:$shimmerBeeAutopeeringPort" ]; then
    sudo jq '.autopeering.bindAddress = "0.0.0.0:'$shimmerBeeAutopeeringPort'"' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeeAutopeering2" >> /tmp/shimmerBeeParsing
fi

if [ "$shimmerBeeAutopeeringEnabled" = "true" ] && [ "$ufw" = "true" ]; then
    sudo ufw allow $shimmerBeeAutopeeringPort/udp > /dev/null 2>&1
else
    sudo ufw delete allow $shimmerBeeAutopeeringPort/udp > /dev/null 2>&1
fi

unset parser