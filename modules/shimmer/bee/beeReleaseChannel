#!/bin/bash

# Check if release is changed
if [ "$shimmerBeeRelease" != "$currentShimmerBeeRelease" ]; then
    {
        echo 0
        echo 20
        source $shimmerBeeModules/beeRemoval
        echo 40
        source $shimmerBeeModules/beeInstaller
        echo 60
        source $shimmerBeeModules/beeParser
        echo 80
        if [ "$shimmerBeeUpdated" = "true" ] || [ "$restartShimmerBee" = "true" ]; then
            sudo systemctl restart shimmer-bee
            unset restartShimmerBee
        fi
        echo 100
    } | whiptail --gauge "Please wait while Bee-Shimmer is prepared..." 8 65 0
    whiptail --title "Bee-Shimmer - Configuration" --msgbox "New release channel ($shimmerBeeRelease) applied and Bee-Shimmer was reinstalled!" 8 65
fi