#!/bin/bash

if [ ! -s "$shimmerBeeHome/$shimmerBeeConfig.json" ] && [ "$shimmerBeeNetwork" = "mainnet" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $shimmerBeeHome/config.chrysalis-mainnet.json https://github.com/iotaledger/bee/releases/download/v${latestShimmerBeeVersion}/$shimmerBeeConfig.json
fi

if [ ! -s "$shimmerBeeHome/$shimmerBeeConfig.json" ] && [ "$shimmerBeeNetwork" = "devnet" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $shimmerBeeHome/config.chrysalis-devnet.json https://github.com/iotaledger/bee/releases/download/v${latestShimmerBeeVersion}/$shimmerBeeConfig.json
fi

if [ ! -s "$shimmerBeeHome/$shimmerBeeConfig.json" ] && [ "$shimmerBeeNetwork" = "alphanet" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $shimmerBeeHome/config.chrysalis-devnet.json https://github.com/iotaledger/bee/releases/download/v${latestShimmerBeeVersion}/$shimmerBeeConfig.json
fi

sudo chown bee:bee $shimmerBeeHome/config.*.json > /dev/null 2>&1

if [ -f "/tmp/shimmerBeeParsing" ]; then
    sudo rm -rf /tmp/shimmerBeeParsing > /dev/null 2>&1
fi
