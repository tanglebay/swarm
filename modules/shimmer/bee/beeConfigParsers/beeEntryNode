#!/bin/bash
if [ "$shimmerBeeNetwork" = "mainnet" ] || [ "$shimmerBeeNetwork" = "alphanet" ]; then
    parser="$(jq '.autopeering.entryNodes' $shimmerBeeHome/$shimmerBeeConfig.json)"
    shimmerBeeEntryNodeOld="/dns/entry-0.shimmernet.tanglebay.com/udp/14636/autopeering/iot4By1FD4pFLrGJ6AAe7YEeSu9RbW9xnPUmxMdQenC"
    if [[ $parser = *$shimmerBeeEntryNodeOld* ]]; then
        shimmerBeeEntryNode="/dns/entry-0.shimmer-mainnet.tanglebay.com/udp/14636/autopeering/iot4By1FD4pFLrGJ6AAe7YEeSu9RbW9xnPUmxMdQenC"
        sudo sudo sed -i 's~'$shimmerBeeEntryNodeOld'~'$shimmerBeeEntryNode'~g' $shimmerBeeHome/$shimmerBeeConfig.json
        restartShimmerBee=true
        echo "shimmerBeeEntrynodes" >> /tmp/shimmerBeeParsing
    fi
    shimmerBeeEntryNodeOld="/dns/entry-1.shimmernet.tanglebay.com/udp/14626/autopeering/CATsx21mFVvQQPXeDineGs9DDeKvoBBQdzcmR6ffCkVA"
    if [[ $parser = *$shimmerBeeEntryNodeOld* ]]; then
        shimmerBeeEntryNode="/dns/entry-1.shimmer-mainnet.tanglebay.com/udp/14626/autopeering/CATsx21mFVvQQPXeDineGs9DDeKvoBBQdzcmR6ffCkVA"
        sudo sudo sed -i 's~'$shimmerBeeEntryNodeOld'~'$shimmerBeeEntryNode'~g' $shimmerBeeHome/$shimmerBeeConfig.json
        restartShimmerBee=true
        echo "shimmerBeeEntrynodes" >> /tmp/shimmerBeeParsing
    fi
    unset shimmerBeeEntryNodeOld
    ####################################################################################################################################################
    parser="$(jq '.autopeering.entryNodes' $shimmerBeeHome/$shimmerBeeConfig.json)"
    shimmerBeeEntryNode="/dns/entry-0.shimmer-mainnet.tanglebay.com/udp/14636/autopeering/iot4By1FD4pFLrGJ6AAe7YEeSu9RbW9xnPUmxMdQenC"
    if [[ $parser != *$shimmerBeeEntryNode* ]]; then
        sudo jq '.autopeering.entryNodes |= .+ ["'$shimmerBeeEntryNode'"]' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
        restartShimmerBee=true
        echo "shimmerBeeEntrynodes" >> /tmp/shimmerBeeParsing
    fi
    shimmerBeeEntryNode="/dns/entry-1.shimmer-mainnet.tanglebay.com/udp/14626/autopeering/CATsx21mFVvQQPXeDineGs9DDeKvoBBQdzcmR6ffCkVA"
    if [[ $parser != *$shimmerBeeEntryNode* ]]; then
        sudo jq '.autopeering.entryNodes |= .+ ["'$shimmerBeeEntryNode'"]' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
        restartShimmerBee=true
        echo "shimmerBeeEntrynodes" >> /tmp/shimmerBeeParsing
    fi
    unset parser shimmerBeeEntryNode
fi