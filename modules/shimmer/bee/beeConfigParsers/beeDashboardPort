#!/bin/bash

parser="$(jq '.dashboard.bindAddress' $shimmerBeeHome/$shimmerBeeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp8082" ]; then
    sudo jq '.dashboard.bindAddress = "/ip4/0.0.0.0/tcp/8082"' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeeDashboardPort" >> /tmp/shimmerBeeParsing
fi

unset parser
