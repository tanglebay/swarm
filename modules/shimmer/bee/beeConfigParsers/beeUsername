#!/bin/bash

parser="$(jq '.dashboard.auth.user' $shimmerBeeHome/$shimmerBeeConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$shimmerBeeUsername" ]; then
    sudo jq '.dashboard.auth.user = "'$shimmerBeeUsername'"' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    newShimmerBeeUsername=true
    echo "shimmerBeeUsername" >> /tmp/shimmerBeeParsing
fi

unset parser
