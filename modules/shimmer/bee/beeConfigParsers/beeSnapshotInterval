#!/bin/bash

parser="$(jq '.snapshot.intervalSynced' $shimmerBeeHome/$shimmerBeeConfig.json)"
if [ "$parser" != "$shimmerBeeSnapshotInterval" ]; then
    sudo jq '.snapshot.intervalSynced = '$shimmerBeeSnapshotInterval'' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeeSnapshotInterval" >> /tmp/shimmerBeeParsing
fi

unset parser
