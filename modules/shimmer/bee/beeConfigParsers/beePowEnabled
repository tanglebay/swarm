#!/bin/bash

parser="$(jq '.restApi.featureProofOfWork' $shimmerBeeHome/$shimmerBeeConfig.json)"
if [ "$parser" != "$shimmerBeePowEnabled" ]; then
    sudo jq '.restApi.featureProofOfWork = '$shimmerBeePowEnabled'' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeePowEnabled" >> /tmp/shimmerBeeParsing
fi

unset parser
