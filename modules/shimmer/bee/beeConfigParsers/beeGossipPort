#!/bin/bash

parser="$(jq '.network.bindAddress' $shimmerBeeHome/$shimmerBeeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp$shimmerBeeGossipPort" ]; then
    sudo jq '.network.bindAddress = "/ip4/0.0.0.0/tcp/'$shimmerBeeGossipPort'"' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeeGossipPort" >> /tmp/shimmerBeeParsing
fi

unset parser
