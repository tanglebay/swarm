#!/bin/bash

parser="$(jq '.dashboard.auth.passwordHash' $shimmerBeeHome/$shimmerBeeConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$shimmerBeePasswordHash" ]; then
    sudo jq '.dashboard.auth.passwordHash = "'$shimmerBeePasswordHash'"' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeePasswordHash" >> /tmp/shimmerBeeParsing
fi

unset parser
