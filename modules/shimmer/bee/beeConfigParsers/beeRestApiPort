#!/bin/bash

parser="$(jq '.restApi.bindAddress' $beeHome/$beeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp14266" ]; then
    sudo jq '.restApi.bindAddress = "/ip4/0.0.0.0/tcp/14266"' $beeHome/$beeConfig.json|sponge $beeHome/$beeConfig.json
    restartBee=true
    echo "beeRestApiPort" >> /tmp/beeParsing
fi

unset parser
