#!/bin/bash

# General
if ! id bee >/dev/null 2>&1; then
    useradd --no-create-home --system bee >/dev/null
fi

if [ ! -d "$shimmerBeeHome" ]; then
    sudo mkdir -p $shimmerBeeHome > /dev/null 2>&1
    sudo chown -R bee:bee $shimmerBeeHome > /dev/null 2>&1
fi

# Install Unzip
if ! [ -x "$(command -v unzip)" ] > /dev/null 2>&1; then
    sudo apt -qq install unzip -y > /dev/null 2>&1
fi

# Create Service
if [ ! -f "/lib/systemd/system/shimmer-bee.service" ]; then
    sudo cp -rf $swarmHome/templates/shimmer/bee/bee.service /lib/systemd/system/shimmer-bee.service
    if [ ! -f "/etc/default/shimmer-bee" ]; then
        if [ "$shimmerBeeNetwork" = "mainnet" ]; then 
            echo "OPTIONS=\"--config config.chrysalis-mainnet.json\"" > /etc/default/shimmer-bee
        fi
        if [ "$shimmerBeeNetwork" = "comnet" ]; then 
            echo "OPTIONS=\"--config config.chrysalis-comnet.json\"" > /etc/default/shimmer-bee
        fi
        if [ "$shimmerBeeNetwork" = "devnet" ]; then 
            echo "OPTIONS=\"--config config.chrysalis-devnet.json\"" > /etc/default/shimmer-bee
        fi
    fi
    if [ ! -f "/etc/systemd/system/multi-user.target.wants/shimmer-bee.service" ]; then
        sudo systemctl enable shimmer-bee > /dev/null 2>&1
    fi
    sudo systemctl daemon-reload
fi

##############################################################################################################################################

# Create dir if not exist
sudo mkdir -p /tmp/shimmer-bee > /dev/null 2>&1

if [ "$osArchitecture" = "amd64" ]; then
    # Download latest bee
    sudo wget -q -O /tmp/shimmer-bee/bee-node-${latestShimmerBeeVersion}-linux-x86-64.zip https://github.com/iotaledger/bee/releases/download/v${latestShimmerBeeVersion}/bee-node-${latestShimmerBeeVersion}-linux-x86-64.zip

    # Unzip archive
    if [ -f "/tmp/shimmer-bee/bee-node-${latestShimmerBeeVersion}-linux-x86-64.zip" ]; then
        sudo unzip /tmp/shimmer-bee/bee-node-${latestShimmerBeeVersion}-linux-x86-64.zip -d /tmp/shimmer-bee > /dev/null 2>&1
    fi

    # Copy binary
    if [ -f "/tmp/shimmer-bee/bee-node-${latestShimmerBeeVersion}-linux-x86-64/bee" ]; then
        beeStatus="$(systemctl show -p ActiveState --value shimmer-bee)"
        if [ "$shimmerBeeStatus" = "active" ]; then
            sudo systemctl stop shimmer-bee
        fi

        sudo cp -rf /tmp/shimmer-bee/bee-node-${latestShimmerBeeVersion}-linux-x86-64/bee /usr/bin/shimmer-bee > /dev/null 2>&1
        sudo chmod +x /usr/bin/shimmer-bee
        newShimmerBeeBinary=true
    fi
fi

##############################################################################################################################################

if [ "$newShimmerBeeBinary" = "true" ]; then
    ## Download config
    ### Mainnet Config
    sudo wget -q -O /tmp/shimmer-bee/config.chrysalis-mainnet.json https://github.com/iotaledger/bee/releases/download/v${latestShimmerBeeVersion}/config.chrysalis-mainnet.json
    if [ ! -s "/tmp/shimmer-bee/config.chrysalis-mainnet.json" ]; then
        sudo wget -q -O /tmp/shimmer-bee/config.chrysalis-mainnet.json https://raw.githubusercontent.com/iotaledger/bee/chrysalis-pt-2/bee-node/config.chrysalis-mainnet.json
    fi
    if [ -f "/tmp/shimmer-bee/config.chrysalis-mainnet.json" ]; then
        sudo cp -rf /tmp/shimmer-bee/config.chrysalis-mainnet.json $shimmerBeeHome/config.chrysalis-mainnet.json > /dev/null 2>&1
        newShimmerBeeConfig=true
    fi

    ### Devnet Config
    sudo wget -q -O /tmp/shimmer-bee/config.chrysalis-devnet.json https://github.com/iotaledger/bee/releases/download/v${latestShimmerBeeVersion}/config.chrysalis-devnet.json
    if [ ! -s "/tmp/shimmer-bee/config.chrysalis-devnet.json" ]; then
        sudo wget -q -O /tmp/shimmer-bee/config.chrysalis-devnet.json https://raw.githubusercontent.com/iotaledger/bee/chrysalis-pt-2/bee-node/config.chrysalis-devnet.json
    fi
    if [ -f "/tmp/shimmer-bee/config.chrysalis-devnet.json" ]; then
        sudo cp -rf /tmp/shimmer-bee/config.chrysalis-devnet.json $shimmerBeeHome/config.chrysalis-devnet.json > /dev/null 2>&1
        newShimmerBeeConfig=true
    fi
fi

##############################################################################################################################################

if [ "$newShimmerBeeConfig" = "true" ]; then
    # Run installer modules
    sudo chown -R bee:bee $shimmerBeeHome > /dev/null 2>&1

    restartShimmerBee=true
    shimmerBeeUpdated=true
fi

# Remove temporary files
sudo rm -rf /tmp/shimmer-bee > /dev/null 2>&1


unset newShimmerBeeBinary
unset newShimmerBeeConfig