#!/bin/bash

source $shimmerInxIndexerModules/inxIndexerConfigs

# Run Config checks
source $shimmerInxIndexerModules/inxIndexerConfigCheck

if [ -z "$shimmerInxIndexerVersion" ]; then
    source $shimmerInxIndexerModules/inxIndexerVersion
fi

#############################################################################################

source $shimmerInxIndexerConfigParsers/inxIndexerDisablePlugins

source $shimmerInxIndexerConfigParsers/inxIndexerEnablePlugins

source $shimmerInxIndexerConfigParsers/inxIndexerInxAddress

source $shimmerInxIndexerConfigParsers/inxIndexerUpdateCheck

source $shimmerInxIndexerConfigParsers/inxIndexerProfiling

# Set file permissions
sudo chown inx:inx $shimmerInxIndexerHome/*.json > /dev/null 2>&1

# Unset all var
unset parser
