#!/bin/bash

source $shimmerInxParticipationModules/inxParticipationConfigs

# Run Config checks
source $shimmerInxParticipationModules/inxParticipationConfigCheck

if [ -z "$shimmerInxParticipationVersion" ]; then
    source $shimmerInxParticipationModules/inxParticipationVersion
fi

#############################################################################################

source $shimmerInxParticipationConfigParsers/shimmerInxParticipationDisablePlugins

source $shimmerInxParticipationConfigParsers/shimmerInxParticipationEnablePlugins

source $shimmerInxParticipationConfigParsers/shimmerInxParticipationInxAddress

source $shimmerInxParticipationConfigParsers/shimmerInxParticipationUpdateCheck

source $shimmerInxParticipationConfigParsers/shimmerInxParticipationProfiling

# Set file permissions
sudo chown inx:inx $shimmerInxParticipationHome/*.json > /dev/null 2>&1

# Unset all var
unset parser
