#!/bin/bash

source $swarmConfigs/inx-mqtt.cfg

if [ "$killall" = "true" ]; then
    sudo killall -s SIGKILL inx-mqtt > /dev/null 2>&1
else
    sudo systemctl stop inx-mqtt > /dev/null 2>&1
fi

if [ ! -f "/usr/bin/inx-indexer" ] && [ ! -f "/usr/bin/inx-participation" ]; then
    if id inx >/dev/null 2>&1; then
        sudo deluser inx >/dev/null
    fi
fi

sudo systemctl disable inx-mqtt > /dev/null 2>&1

sudo rm -rf /usr/bin/inx-mqtt /var/lib/inx-mqtt /lib/systemd/system/inx-mqtt.service /etc/default/inx-mqtt > /dev/null 2>&1

sudo systemctl daemon-reload > /dev/null 2>&1

if [ ! -f "/usr/bin/hornet" ] && [ ! -f "/usr/bin/hornet-shimmer" ] && [ ! -f "/usr/bin/goshimmer" ] && [ ! -f "/usr/bin/wasp" ] && [ ! -f "/usr/bin/inx-mqtt" ] && [ ! -f "/usr/bin/inx-mqtt" ] && [ ! -f "/usr/bin/inx-participation" ]; then
    sudo snap remove go > /dev/null 2>&1
fi
