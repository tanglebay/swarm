#!/bin/bash

parser=$(jq '.mqtt.tcp.enabled' $inxMqttHome/$inxMqttConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxMqttTcpEnabled" ]; then
    sudo jq '.mqtt.tcp.enabled = '$inxMqttTcpEnabled'' $inxMqttHome/$inxMqttConfig.json|sponge $inxMqttHome/$inxMqttConfig.json
    restartInxMqtt=true
    echo "inxMqttTcpEnabled" >> /tmp/inxMqttParsing
fi
