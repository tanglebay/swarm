#!/bin/bash

parser=$(jq '.app.checkForUpdates' $inxIndexerHome/$inxIndexerConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxIndexerUpdateCheck" ]; then
    sudo jq '.app.checkForUpdates = '$inxIndexerUpdateCheck'' $inxIndexerHome/$inxIndexerConfig.json|sponge $inxIndexerHome/$inxIndexerConfig.json
    restartInxIndexer=true
    echo "inxIndexerUpdateCheck" >> /tmp/inxIndexerParsing
fi
