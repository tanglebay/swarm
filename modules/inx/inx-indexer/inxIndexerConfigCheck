#!/bin/bash

if [ ! -s "$inxIndexerHome/$inxIndexerConfig.json" ]; then
    if [ -f "$inxIndexerHome/$inxIndexerConfig.json" ]; then
        sudo chown inx:inx $inxIndexerHome/$inxIndexerConfig.json > /dev/null 2>&1
    fi
    sudo -u inx wget -q -O $inxIndexerHome/$inxIndexerConfig.json https://raw.githubusercontent.com/iotaledger/inx-indexer/develop/$inxIndexerConfig.json
fi

if [ -f "/tmp/inxIndexerParsing" ]; then
    sudo rm -rf /tmp/inxIndexerParsing > /dev/null 2>&1
fi