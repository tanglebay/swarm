#!/bin/bash

if [ ! -s "$inxMqttHome/$inxMqttConfig.json" ]; then
    if [ -f "$inxMqttHome/$inxMqttConfig.json" ]; then
        sudo chown inx:inx $inxMqttHome/$inxMqttConfig.json > /dev/null 2>&1
    fi
    sudo -u inx wget -q -O $inxMqttHome/$inxMqttConfig.json https://raw.githubusercontent.com/iotaledger/inx-indexer/develop/$inxMqttConfig.json
fi

if [ -f "/tmp/inxMqttParsing" ]; then
    sudo rm -rf /tmp/inxMqttParsing > /dev/null 2>&1
fi