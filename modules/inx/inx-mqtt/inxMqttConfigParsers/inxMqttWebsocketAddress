#!/bin/bash

parser=$(jq '.mqtt.websocket.bindAddress' $inxIndexerHome/$inxIndexerConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxIndexerWebsocketAddress" ]; then
    sudo jq '.mqtt.websocket.bindAddress = '$inxIndexerWebsocketAddress'' $inxIndexerHome/$inxIndexerConfig.json|sponge $inxIndexerHome/$inxIndexerConfig.json
    restartInxIndexer=true
    echo "inxIndexerWebsocketAddress" >> /tmp/inxIndexerParsing
fi
