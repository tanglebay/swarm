#!/bin/bash

parser=$(jq '.mqtt.websocket.bindAddress' $inxMqttHome/$inxMqttConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxMqttWebsocketAddress" ]; then
    sudo jq '.mqtt.websocket.bindAddress = '$inxMqttWebsocketAddress'' $inxMqttHome/$inxMqttConfig.json|sponge $inxMqttHome/$inxMqttConfig.json
    restartInxMqtt=true
    echo "inxMqttWebsocketAddress" >> /tmp/inxMqttParsing
fi
