#!/bin/bash

parser=$(jq '.mqtt.tcp.bindAddress' $inxIndexerHome/$inxIndexerConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxIndexerTcpAddress" ]; then
    sudo jq '.mqtt.tcp.bindAddress = "'$inxIndexerTcpAddress'"' $inxIndexerHome/$inxIndexerConfig.json|sponge $inxIndexerHome/$inxIndexerConfig.json
    restartInxIndexer=true
    echo "inxIndexerTcpAddress" >> /tmp/inxIndexerParsing
fi
