#!/bin/bash

parser=$(jq '.mqtt.websocket.enabled' $inxMqttHome/$inxMqttConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxMqttWebsocketEnabled" ]; then
    sudo jq '.mqtt.websocket.enabled = '$inxMqttWebsocketEnabled'' $inxMqttHome/$inxMqttConfig.json|sponge $inxMqttHome/$inxMqttConfig.json
    restartInxMqtt=true
    echo "inxMqttWebsocketEnabled" >> /tmp/inxMqttParsing
fi
