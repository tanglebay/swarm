#!/bin/bash

parser=$(jq '.inx.address' $inxMqttHome/$inxMqttConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxMqttInxAddress" ]; then
    sudo jq '.inx.address = "'$inxMqttInxAddress'"' $inxMqttHome/$inxMqttConfig.json|sponge $inxMqttHome/$inxMqttConfig.json
    restartInxMqtt=true
    echo "inxMqttInxAddress" >> /tmp/inxMqttParsing
fi
