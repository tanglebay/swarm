#!/bin/bash

parser=$(jq '.app.checkForUpdates' $inxParticipationHome/$inxParticipationConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxParticipationUpdateCheck" ]; then
    sudo jq '.app.checkForUpdates = '$inxParticipationUpdateCheck'' $inxParticipationHome/$inxParticipationConfig.json|sponge $inxParticipationHome/$inxParticipationConfig.json
    restartInxParticipation=true
    echo "inxParticipationUpdateCheck" >> /tmp/inxParticipationParsing
fi
