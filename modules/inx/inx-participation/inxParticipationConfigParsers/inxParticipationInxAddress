#!/bin/bash

parser=$(jq '.inx.address' $inxParticipationHome/$inxParticipationConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxParticipationInxAddress" ]; then
    sudo jq '.inx.address = "'$inxParticipationInxAddress'"' $inxParticipationHome/$inxParticipationConfig.json|sponge $inxParticipationHome/$inxParticipationConfig.json
    restartInxParticipation=true
    echo "inxParticipationInxAddress" >> /tmp/inxParticipationParsing
fi
