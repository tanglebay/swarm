#!/bin/bash

# Check if release is changed
if [ "$hornetRelease" != "$currentHornetRelease" ]; then
    {
        echo 0
        echo 20
        source $hornetModules/hornetRemoval
        echo 40
        source $hornetModules/hornetInstaller
        echo 60
        source $hornetModules/hornetParser
        echo 80
        if [ "$hornetUpdated" = "true" ] || [ "$restartHornet" = "true" ]; then
            sudo systemctl restart hornet
            unset restartHornet
        fi
        echo 100
    } | whiptail --gauge "Please wait while Hornet- is prepared..." 8 65 0
    whiptail --title "Hornet (IOTA) - Configuration" --msgbox "New release channel ($hornetRelease) applied and Hornet was reinstalled!" 8 65
fi