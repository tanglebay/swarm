#!/bin/bash

if [[ $iotaHornetVersion =~ ^1.* ]]; then
    parser=$(jq '.dashboard.bindAddress' $iotaHornetHome/$iotaHornetConfig.json)
    parser=$(echo $parser | tr -d '"')
    if [ "$parser" != "localhost:8081" ]; then
        sudo jq '.dashboard.bindAddress = "localhost:8081"' $iotaHornetHome/$iotaHornetConfig.json|sponge $iotaHornetHome/$iotaHornetConfig.json
        restartIotaHornet=true
        echo "iotaHornetDashboardPort" >> /tmp/iotaHornetParsing
    fi
fi