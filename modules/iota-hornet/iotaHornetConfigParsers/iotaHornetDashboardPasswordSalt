#!/bin/bash
if [ ! -z "$iotaHornetPasswordSalt" ]; then
    parser="$(jq '.dashboard.auth.passwordSalt' $iotaHornetHome/$iotaHornetConfig.json)"
    parser=$(echo $parser | tr -d '"')
    if [ "$iotaHornetPasswordSalt" != "$parser" ]; then
        sudo jq '.dashboard.auth.passwordSalt = "'$iotaHornetPasswordSalt'"' $iotaHornetHome/$iotaHornetConfig.json|sponge $iotaHornetHome/$iotaHornetConfig.json
        restartIotaHornet=true
        echo "iotaHornetDashboardPasswordSalt" >> /tmp/iotaHornetParsing
    fi
fi