#!/bin/bash

if [ "$iotaHornetReleaseVersion" != "v2" ] && [ ! -z "$iotaHornetReleaseVersion" ]; then
    if [ ! -z "$iotaHornetPasswordHash" ]; then
        parser="$(jq '.dashboard.auth.passwordHash' $iotaHornetHome/$iotaHornetConfig.json)"
        parser=$(echo $parser | tr -d '"')
        if [ "$iotaHornetPasswordHash" != "$parser" ]; then
            sudo jq '.dashboard.auth.passwordHash = "'$iotaHornetPasswordHash'"' $iotaHornetHome/$iotaHornetConfig.json|sponge $iotaHornetHome/$iotaHornetConfig.json
            restartIotaHornet=true
            echo "iotaHornetDashboardPasswordHash" >> /tmp/iotaHornetParsing
        fi
    fi
fi