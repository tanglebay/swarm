#!/bin/bash

# Check if release is changed
if [ "$beeRelease" != "$currentBeeBeeRelease" ]; then
    {
        echo 0
        echo 20
        source $beeModules/beeRemoval
        echo 40
        source $beeModules/beeInstaller
        echo 60
        source $beeModules/beeParser
        echo 80
        if [ "$beeUpdated" = "true" ] || [ "$restartBee" = "true" ]; then
            sudo systemctl restart bee
            unset restartBee
        fi
        echo 100
    } | whiptail --gauge "Please wait while Bee is prepared..." 8 65 0
    whiptail --title "Bee - Configuration" --msgbox "New release channel ($beeRelease) applied and Bee was reinstalled!" 8 65
fi