#!/bin/bash

if [ ! -s "$beeHome/$beeConfig.json" ] && [ "$beeNetwork" = "mainnet" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $beeHome/$beeConfig.json https://github.com/iotaledger/bee/releases/download/v${latestBeeVersion}/$beeConfig.json
fi
if [ ! -s "$beeHome/$beeConfig.json" ] && [ "$beeNetwork" = "comnet" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $beeHome/$beeConfig.json https://github.com/iotaledger/bee/releases/download/v${latestBeeVersion}/$beeConfig.json
fi

if [ ! -s "$beeHome/$beeConfig.json" ] && [ "$beeNetwork" = "devnet" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $beeHome/$beeConfig.json https://github.com/iotaledger/bee/releases/download/v${latestBeeVersion}/$beeConfig.json
fi

sudo chown bee:bee $beeHome/config.*.json > /dev/null 2>&1

if [ -f "/tmp/beeParsing" ]; then
    sudo rm -rf /tmp/beeParsing > /dev/null 2>&1
fi
