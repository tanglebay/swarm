#!/bin/bash

parser="$(jq '.network.bindAddress' $beeHome/$beeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp$beeGossipPort" ]; then
    sudo jq '.network.bindAddress = "/ip4/0.0.0.0/tcp/'$beeGossipPort'"' $beeHome/$beeConfig.json|sponge $beeHome/$beeConfig.json
    restartBee=true
    echo "beeGossipPort" >> /tmp/beeParsing
fi

unset parser
