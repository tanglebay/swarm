    else
        sudo sed -i 's/^waspDashboardAuthUsername=.*/waspDashboardAuthUsername="'$waspDashboardAuthUsername'"/' $swarmConfigs/wasp.cfg
    fi

    if [ -z "$waspDashboardAuthPassword" ]; then
