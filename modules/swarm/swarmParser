        sudo sed -i 's/^hornetShimmerServiceStatusCheck=.*/hornetShimmerServiceStatusCheck=true/' $swarmConfigs/swarm.cfg
    else
        sudo sed -i 's/^hornetShimmerServiceStatusCheck=.*/hornetShimmerServiceStatusCheck='$hornetShimmerServiceStatusCheck'/' $swarmConfigs/swarm.cfg
    fi

    if [ -z "$beeServiceStatusCheck" ]; then
        sudo sed -i 's/^beeServiceStatusCheck=.*/beeServiceStatusCheck=true/' $swarmConfigs/swarm.cfg
    else
        sudo sed -i 's/^beeServiceStatusCheck=.*/beeServiceStatusCheck='$beeServiceStatusCheck'/' $swarmConfigs/swarm.cfg
    fi

    if [ -z "$beeShimmerServiceStatusCheck" ]; then
        sudo sed -i 's/^beeShimmerServiceStatusCheck=.*/beeShimmerServiceStatusCheck=true/' $swarmConfigs/swarm.cfg
    else
        sudo sed -i 's/^beeShimmerServiceStatusCheck=.*/beeShimmerServiceStatusCheck='$beeShimmerServiceStatusCheck'/' $swarmConfigs/swarm.cfg
    fi

    if [ -z "$inxIndexerServiceStatusCheck" ]; then
        sudo sed -i 's/^inxIndexerServiceStatusCheck=.*/inxIndexerServiceStatusCheck=true/' $swarmConfigs/swarm.cfg
    else
        sudo sed -i 's/^inxIndexerServiceStatusCheck=.*/inxIndexerServiceStatusCheck='$inxIndexerServiceStatusCheck'/' $swarmConfigs/swarm.cfg
    fi

    if [ -z "$inxMqttServiceStatusCheck" ]; then
        sudo sed -i 's/^inxMqttServiceStatusCheck=.*/inxMqttServiceStatusCheck=true/' $swarmConfigs/swarm.cfg
    else
        sudo sed -i 's/^inxMqttServiceStatusCheck=.*/inxMqttServiceStatusCheck='$inxMqttServiceStatusCheck'/' $swarmConfigs/swarm.cfg
    fi

    if [ -z "$inxParticipationServiceStatusCheck" ]; then
        sudo sed -i 's/^inxParticipationServiceStatusCheck=.*/inxParticipationServiceStatusCheck=true/' $swarmConfigs/swarm.cfg
    else
        sudo sed -i 's/^inxParticipationServiceStatusCheck=.*/inxParticipationServiceStatusCheck='$inxParticipationServiceStatusCheck'/' $swarmConfigs/swarm.cfg
    fi
fi

####################################################################################################################################

if [ -f "$swarmTmp/watchdog.cfg" ]; then
    source $swarmTmp/watchdog.cfg

    # Updater for watchdog.log
    sudo sed -i 's/^hornetStatusCounter=.*/hornetStatusCounter='$hornetStatusCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^hornetSyncCounter=.*/hornetSyncCounter='$hornetSyncCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^hornetShimmerStatusCounter=.*/hornetShimmerStatusCounter='$hornetShimmerStatusCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^hornetShimmerSyncCounter=.*/hornetShimmerSyncCounter='$hornetShimmerSyncCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^beeStatusCounter=.*/beeStatusCounter='$beeStatusCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^beeSyncCounter=.*/beeSyncCounter='$beeSyncCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^beeShimmerStatusCounter=.*/beeShimmerStatusCounter='$beeShimmerStatusCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^beeShimmerSyncCounter=.*/beeShimmerSyncCounter='$beeShimmerSyncCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^goshimmerStatusCounter=.*/goshimmerStatusCounter='$goshimmerStatusCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^goshimmerSyncCounter=.*/goshimmerSyncCounter='$goshimmerSyncCounter'/' $swarmConfigs/watchdog.cfg
    sudo sed -i 's/^waspStatusCounter=.*/waspStatusCounter='$waspStatusCounter'/' $swarmConfigs/watchdog.cfg
fi

####################################################################################################################################

if [ -f "$swarmTmp/githubVersion" ] || [ -f "$swarmTmp/latest-versions.cfg" ]; then
    if [ -f "$swarmTmp/githubVersion" ]; then
        source $swarmTmp/githubVersion
    else
        source $swarmTmp/latest-versions.cfg
    fi

    # Updater for latest-versions.cfg
    sudo sed -i 's~^latestSwarmVersion=.*~latestSwarmVersion="'$latestSwarmVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestHornetVersion=.*~latestHornetVersion="'$latestHornetVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestHornetShimmerVersion=.*~latestHornetShimmerVersion="'$latestHornetShimmerVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestBeeVersion=.*~latestBeeVersion="'$latestBeeVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestBeeShimmerVersion=.*~latestBeeShimmerVersion="'$latestBeeShimmerVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestGoshimmerVersion=.*~latestGoshimmerVersion="'$latestGoshimmerVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestWaspVersion=.*~latestWaspVersion="'$latestWaspVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestInxIndexerVersion=.*~latestInxIndexerVersion="'$latestInxIndexerVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestInxMqttVersion=.*~latestInxMqttVersion="'$latestInxMqttVersion'"~' $swarmConfigs/latest-versions.cfg
    sudo sed -i 's~^latestInxParticipationVersion=.*~latestInxParticipationVersion="'$latestInxParticipationVersion'"~' $swarmConfigs/latest-versions.cfg
fi

