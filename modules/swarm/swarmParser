    if [ -z "$proxyGoshimmerExternalDashboard" ]; then
        sudo sed -i 's/^proxyGoshimmerExternalDashboard=.*/proxyGoshimmerExternalDashboard=false/' $swarmConfigs/proxy.cfg
    else
        sudo sed -i 's/^proxyGoshimmerExternalDashboard=.*/proxyGoshimmerExternalDashboard='$proxyGoshimmerExternalDashboard'/' $swarmConfigs/proxy.cfg
    fi
    ####
    if [ ! -z "$proxyHornetDomain" ] && [ ! -z "$proxyHornetPort" ]; then
