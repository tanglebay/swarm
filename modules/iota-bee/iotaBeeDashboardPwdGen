#!/bin/bash

source $iotaBeeModules/iotaBeeVersion
iotaBeeDashboardPassword=$(whiptail --passwordbox "\nPlease enter a secure password for your dashboard login:" 8 65 --title "Bee [IOTA] Dashboard" 3>&1 1>&2 2>&3)
exitstatus=$?
if [ "$exitstatus" != "1" ]; then
    iotaBeeDashboardPassword2=$(whiptail --passwordbox "\nPlease re-enter the password for your dashboard login:" 8 65 --title "Bee [IOTA] Dashboard" 3>&1 1>&2 2>&3)
    exitstatus=$?
    if [ "$exitstatus" != "1" ]; then
        if [ ! -z "$iotaBeeDashboardPassword" ] && [ ! -z "$iotaBeeDashboardPassword2" ] && [ "$iotaBeeDashboardPassword" = "$iotaBeeDashboardPassword2" ] && [ -f "/usr/bin/iota-bee" ]; then
            {
                echo 0
                export BEE_TOOL_PASSWORD="$iotaBeeDashboardPassword"
                echo 10
                iotaBeePwdHash=$(/usr/bin/iota-bee password)
                echo 20
                iotaBeePasswordHash=$(echo $iotaBeePwdHash | grep -o "Password hash:.*" | awk '{print $3}')
                echo 30
                iotaBeePasswordSalt=$(echo $iotaBeePwdHash | grep -o "Password salt:.*" | awk '{print $3}')
                echo 40
                sudo sed -i 's/^iotaBeePasswordHash=.*/iotaBeePasswordHash="'$iotaBeePasswordHash'"/' $swarmConfigs/iota-bee.cfg
                echo 50
                sudo sed -i 's/^iotaBeePasswordSalt=.*/iotaBeePasswordSalt="'$iotaBeePasswordSalt'"/' $swarmConfigs/iota-bee.cfg
                echo 60
                source $iotaBeeConfigParsers/iotaBeePasswordHash
                echo 70
                source $iotaBeeConfigParsers/iotaBeePasswordSalt
                echo 80
                export BEE_TOOL_PASSWORD=""
                unset iotaBeeDashboardPassword
                unset iotaBeeDashboardPassword2
                echo 100
                sleep 0.25
            } | whiptail --gauge "Please wait while generating Dashboard login..." 6 65 0
            whiptail --title "Bee [IOTA] Dashboard" --msgbox "New password created successfully!" 8 65
            restartIotaBee=true
        else
            whiptail --title "Bee [IOTA] Dashboard" --msgbox "Aborted - Passwords do not match!" 8 65
        fi
    fi
fi

unset exitstatus
