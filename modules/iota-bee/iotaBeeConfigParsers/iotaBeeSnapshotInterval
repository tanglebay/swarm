#!/bin/bash

parser="$(jq '.snapshot.intervalSynced' $iotaBeeHome/$iotaBeeConfig.json)"
if [ "$parser" != "$iotaBeeSnapshotInterval" ]; then
    sudo jq '.snapshot.intervalSynced = '$iotaBeeSnapshotInterval'' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeeSnapshotInterval" >> /tmp/iotaBeeParsing
fi

unset parser
