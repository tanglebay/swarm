#!/bin/bash

parser="$(jq '.dashboard.auth.user' $iotaBeeHome/$iotaBeeConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$iotaBeeUsername" ]; then
    sudo jq '.dashboard.auth.user = "'$iotaBeeUsername'"' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    newIotaBeeUsername=true
    echo "iotaBeeUsername" >> /tmp/iotaBeeParsing
fi

unset parser
