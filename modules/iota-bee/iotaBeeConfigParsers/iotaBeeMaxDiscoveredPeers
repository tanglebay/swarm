#!/bin/bash

parser="$(jq '.network.maxDiscoveredPeers' $iotaBeeHome/$iotaBeeConfig.json)"
if [ "$parser" != "$iotaBeeMaxDiscoveredPeers" ]; then
    sudo jq '.network.maxDiscoveredPeers = '$iotaBeeMaxDiscoveredPeers'' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeeMaxDiscoveredPeers" >> /tmp/iotaBeeParsing
fi

unset parser
