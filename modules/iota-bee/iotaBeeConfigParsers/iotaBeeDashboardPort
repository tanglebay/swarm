#!/bin/bash

parser="$(jq '.dashboard.bindAddress' $iotaBeeHome/$iotaBeeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp8082" ]; then
    sudo jq '.dashboard.bindAddress = "/ip4/0.0.0.0/tcp/8082"' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeeDashboardPort" >> /tmp/iotaBeeParsing
fi

unset parser
