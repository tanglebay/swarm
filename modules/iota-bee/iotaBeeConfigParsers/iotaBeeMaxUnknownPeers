#!/bin/bash

parser="$(jq '.network.maxUnknownPeers' $iotaBeeHome/$iotaBeeConfig.json)"
if [ "$parser" != "$iotaBeeMaxUnknownPeers" ]; then
    sudo jq '.network.maxUnknownPeers = '$iotaBeeMaxUnknownPeers'' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeeMaxUnknownPeers" >> /tmp/iotaBeeParsing
fi

unset parser
