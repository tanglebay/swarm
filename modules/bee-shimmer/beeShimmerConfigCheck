#!/bin/bash

if [ ! -s "$beeShimmerHome/config.shimmer-mainnet.json" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $beeShimmerHome/config.chrysalis-mainnet.json https://github.com/iotaledger/bee/releases/download/v${latestBeeShimmerVersion}/config.shimmer-mainnet.json
fi

if [ ! -s "$beeShimmerHome/config.shimmer-devnet.json" ]; then
    #source $beeModules/beeVersion
    sudo wget -q -O $beeShimmerHome/config.chrysalis-devnet.json https://github.com/iotaledger/bee/releases/download/v${latestBeeShimmerVersion}/config.shimmer-devnet.json
fi

sudo chown bee:bee $beeShimmerHome/config.*.json > /dev/null 2>&1

if [ -f "/tmp/beeShimmerParsing" ]; then
    sudo rm -rf /tmp/beeShimmerParsing > /dev/null 2>&1
fi
