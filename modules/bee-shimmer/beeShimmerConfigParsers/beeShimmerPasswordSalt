#!/bin/bash

parser="$(jq '.dashboard.auth.passwordSalt' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$beeShimmerPasswordSalt" ]; then
    sudo jq '.dashboard.auth.passwordSalt = "'$beeShimmerPasswordSalt'"' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json|sponge $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json
    restartBeeShimmer=true
    echo "beeShimmerPasswordSalt" >> /tmp/beeShimmerParsing
fi

unset parser
