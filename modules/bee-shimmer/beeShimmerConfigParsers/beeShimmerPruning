#!/bin/bash

parser="$(jq '.pruning.enabled' $beeShimmerHome/$beeShimmerConfig.json)"
if [ "$parser" != "$beeShimmerPruningEnabled" ]; then
    sudo jq '.pruning.enabled = '$beeShimmerPruningEnabled'' $beeShimmerHome/$beeShimmerConfig.json|sponge $beeShimmerHome/$beeShimmerConfig.json
    restartBeeShimmer=true
    echo "beeShimmerPruning1" >> /tmp/beeShimmerParsing
fi
parser="$(jq '.pruning.delay' $beeShimmerHome/$beeShimmerConfig.json)"
if [ "$parser" != "$beeShimmerPruningDelay" ]; then
    sudo jq '.pruning.delay = '$beeShimmerPruningDelay'' $beeShimmerHome/$beeShimmerConfig.json|sponge $beeShimmerHome/$beeShimmerConfig.json
    restartBeeShimmer=true
    echo "beeShimmerPruning2" >> /tmp/beeShimmerParsing
fi

unset parser
