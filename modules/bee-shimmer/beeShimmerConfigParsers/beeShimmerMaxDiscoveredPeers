#!/bin/bash

parser="$(jq '.network.maxDiscoveredPeers' $beeShimmerHome/$beeShimmerConfig.json)"
if [ "$parser" != "$beeShimmerMaxDiscoveredPeers" ]; then
    sudo jq '.network.maxDiscoveredPeers = '$beeShimmerMaxDiscoveredPeers'' $beeShimmerHome/$beeShimmerConfig.json|sponge $beeShimmerHome/$beeShimmerConfig.json
    restartBeeShimmer=true
    echo "beeShimmerMaxDiscoveredPeers" >> /tmp/beeShimmerParsing
fi

unset parser
