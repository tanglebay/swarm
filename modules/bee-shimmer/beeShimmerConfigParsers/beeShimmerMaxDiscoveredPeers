#!/bin/bash

parser="$(jq '.network.maxDiscoveredPeers' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json)"
if [ "$parser" != "$beeShimmerMaxDiscoveredPeers" ]; then
    sudo jq '.network.maxDiscoveredPeers = '$beeShimmerMaxDiscoveredPeers'' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json|sponge $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json
    restartBeeShimmer=true
    echo "beeShimmerMaxDiscoveredPeers" >> /tmp/beeShimmerParsing
fi

unset parser
