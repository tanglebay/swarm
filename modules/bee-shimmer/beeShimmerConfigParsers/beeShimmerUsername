#!/bin/bash

parser="$(jq '.dashboard.auth.user' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$beeShimmerUsername" ]; then
    sudo jq '.dashboard.auth.user = "'$beeShimmerUsername'"' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json|sponge $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json
    restartBeeShimmer=true
    newBeeShimmerUsername=true
    echo "beeShimmerUsername" >> /tmp/beeShimmerParsing
fi

unset parser
