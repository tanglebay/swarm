#!/bin/bash

parser="$(jq '.restApi.bindAddress' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp14268" ]; then
    sudo jq '.restApi.bindAddress = "/ip4/0.0.0.0/tcp/14268"' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json|sponge $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json
    restartBeeShimmer=true
    echo "beeShimmerRestApiPort" >> /tmp/beeShimmerParsing
fi

unset parser
