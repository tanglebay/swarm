#!/bin/bash

parser="$(jq '.snapshot.intervalSynced' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json)"
if [ "$parser" != "$beeShimmerSnapshotInterval" ]; then
    sudo jq '.snapshot.intervalSynced = '$beeShimmerSnapshotInterval'' $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json|sponge $beeShimmerHome/config.chrysalis-$beeShimmerNetwork.json
    restartBeeShimmer=true
    echo "beeShimmerSnapshotInterval" >> /tmp/beeShimmerParsing
fi

unset parser
