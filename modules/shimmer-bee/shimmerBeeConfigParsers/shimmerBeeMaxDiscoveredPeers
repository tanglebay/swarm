#!/bin/bash

parser="$(jq '.network.maxDiscoveredPeers' $shimmerBeeHome/$shimmerBeeConfig.json)"
if [ "$parser" != "$shimmerBeeMaxDiscoveredPeers" ]; then
    sudo jq '.network.maxDiscoveredPeers = '$shimmerBeeMaxDiscoveredPeers'' $shimmerBeeHome/$shimmerBeeConfig.json|sponge $shimmerBeeHome/$shimmerBeeConfig.json
    restartShimmerBee=true
    echo "shimmerBeeMaxDiscoveredPeers" >> /tmp/shimmerBeeParsing
fi

unset parser
