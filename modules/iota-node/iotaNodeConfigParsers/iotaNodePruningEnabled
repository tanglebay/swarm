#!/bin/bash

parser="$(jq '.pruning.size.enabled' $iotaNodePath/config.json)"
if [ "$parser" != "$iotaNodePruningEnabled" ]; then
    if [ "$iotaNodePruningEnabled" = "true" ] || [ "$iotaNodePruningEnabled" = "false" ]; then
        sudo jq '.pruning.size.enabled = '$iotaNodePruningEnabled'' $iotaNodePath/config.json|sponge $iotaNodePath/config.json
        restartIotaNode=true
        echo "iotaNodePruningEnabled" >> /tmp/iotaNodeParsing
    fi
fi