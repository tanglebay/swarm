#!/bin/bash

parser="$(jq '.p2p.autopeering.enabled' $iotaNodePath/config.json)"
if [ "$iotaNodeAutopeeringEnabled" = "true" ] || [ "$iotaNodeAutopeeringEnabled" = "false" ]; then
    if [ "$parser" != "$iotaNodeAutopeeringEnabled" ]; then
        sudo jq '.p2p.autopeering.enabled = '$iotaNodeAutopeeringEnabled'' $iotaNodePath/config.json|sponge $iotaNodePath/config.json
        restartIotaNode=true
        echo "iotaNodeAutopeeringEnabled" >> /tmp/iotaNodeParsing
    fi
fi