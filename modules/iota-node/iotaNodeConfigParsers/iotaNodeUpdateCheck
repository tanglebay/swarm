#!/bin/bash

parser="$(jq '.app.checkForUpdates' $iotaNodePath/config.json)"
if [ "$iotaNodeUpdateCheck" = "true" ] || [ "$iotaNodeUpdateCheck" = "false" ]; then
    if [ "$parser" != "$iotaNodeUpdateCheck" ]; then
        sudo jq '.app.checkForUpdates = '$iotaNodeUpdateCheck'' $iotaNodePath/config.json|sponge $iotaNodePath/config.json
        restartIotaNode=true
        echo "iotaNodeUpdateCheck" >> /tmp/iotaNodeParsing
    fi
fi