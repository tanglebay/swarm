#!/bin/bash

parser=$(jq '.p2p.autopeering.bindAddress' $iotaNodePath/config.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "0.0.0.0:$iotaNodeAutopeeringPort" ] && [ $iotaNodeAutopeeringPort -eq $iotaNodeAutopeeringPort ] && [ "$iotaNodeAutopeeringPort" -gt 0 ] 2>/dev/null; then
    sudo jq '.p2p.autopeering.bindAddress = "0.0.0.0:'$iotaNodeAutopeeringPort'"' $iotaNodePath/config.json|sponge $iotaNodePath/config.json
    restartIotaNode=true
    echo "iotaNodeAutopeeringPort" >> /tmp/iotaNodeParsing
fi