#!/bin/bash

parser="$(jq '.p2p.autopeering.runAsEntryNode' $iotaNodePath/config.json)"
if [ "$iotaNodeRunAsEntryNode" = "true" ] || [ "$iotaNodeRunAsEntryNode" = "false" ]; then
    if [ "$parser" != "$iotaNodeRunAsEntryNode" ]; then
        sudo jq '.p2p.autopeering.runAsEntryNode = '$iotaNodeRunAsEntryNode'' $iotaNodePath/config.json|sponge $iotaNodePath/config.json
        restartIotaNode=true
        echo "iotaNodeRunAsEntryNode" >> /tmp/iotaNodeParsing
    fi
fi