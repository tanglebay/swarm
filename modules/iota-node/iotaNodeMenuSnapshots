#!/bin/bash

if (whiptail --title "Node [IOTA] Management" --yesno --defaultno "Do you want to use an alternative source for the [IOTA] Node snapshot?" 8 70); then
    CHOICE=$(
        whiptail --title "Node [IOTA] Management" --menu "\nChoose your option" 24 70 0 \
        "" "" \
        "1)" "Download Snapshot For Stardust Genesis" \
        "2)" "Download Snapshot via URL" 3>&2 2>&1 1>&3
    )
    exitstatus=$?
    if [ "$exitstatus" != "1" ]; then
        case $CHOICE in
            "1)")
                iotaNodeSnapshotSourceValid=$(curl --max-time 2 -s -o /dev/null -w "%{http_code}" https://$cdnUrl/snapshots/iota-mainnet/events/stardust_genesis.bin)
                if [ "$iotaNodeSnapshotSourceValid" = "200" ]; then
                    iotaNodeSnapshotSource="https://$cdnUrl/snapshots/iota-mainnet/events/stardust_genesis.bin"
                else
                    unset iotaNodeSnapshotSourceValid
                    exitstatus=1
                fi
            ;;
            "2)")
                iotaNodeSnapshotSource=$(whiptail --inputbox "\nPlease specify the download url for the [IOTA] Node full snapshot" 10 65 --title "Node [IOTA] Management" 3>&1 1>&2 2>&3)
                exitstatus=$?
                if [ "$exitStatus" != 1 ] && [[ $iotaNodeSnapshotSource =~ *.bin$ ]]; then
                    iotaNodeSnapshotSourceValid=$(curl --max-time 5 -s -o /dev/null -w "%{http_code}" $iotaNodeSnapshotSource)
                    if [ "$iotaNodeSnapshotSourceValid" != "200" ]; then
                        unset iotaNodeSnapshotSource iotaNodeSnapshotSourceValid
                        exitstatus=1
                    fi
                else
                    unset iotaNodeSnapshotSource
                    exitstatus=1
                fi
            ;;
        esac
    fi
fi