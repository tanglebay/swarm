#!/bin/bash
source $swarmConfigsPath/latest-app-versions.cfg

if [ -z "$latestIotaNodeVersion" ] || [ "$latestIotaNodeVersion" = "\"\"" ] || [ "$latestIotaNodeVersion" = "null" ] || ! [[ $latestIotaNodeVersion =~ [0-9] ]]; then
    if [[ `wget -S --spider https://$cdnUrl/github/releases.json 2>&1 | grep 'HTTP/1.1 200 OK'` ]]; then
        releaseFileUrl="https://$cdnUrl/github/releases.json"
    else
        releaseFileUrl="https://raw.githubusercontent.com/tanglebay/apps-releases/main/releases.json"
    fi
    latestIotaNodeVersion=$(curl --max-time 5 -Ls $releaseFileUrl | jq '."iota".'node'')
    latestIotaNodeVersion=$(echo $latestIotaNodeVersion | tr -d 'v"')

    if [ ! -z "$latestIotaNodeVersion" ] && [ "$latestIotaNodeVersion" != "\"\"" ] && [ "$latestIotaNodeVersion" != "null" ]; then
        sudo sed -i 's~^latestIotaNodeVersion=.*~latestIotaNodeVersion="'$latestIotaNodeVersion'"~' $swarmConfigsPath/latest-app-versions.cfg
    fi
fi

# Local node version
if [ -d $iotaNodePath ]; then
    iotaNodeVersion=$( cd $swarmDockerPath ; docker compose run $iotaNodeDockerService -v | awk '{ print $2 }' | tr -d 'v' )
fi

# Replace var if empty
if [ -z "$latestIotaNodeVersion" ] || [ "$latestIotaNodeVersion" = "null" ]; then
    latestIotaNodeVersion=$iotaNodeVersion
fi
