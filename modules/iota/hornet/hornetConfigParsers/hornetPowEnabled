#!/bin/bash

parser="$(jq '.restAPI.powEnabled' $iotaHornetHome/$iotaHornetConfig.json)"
if [ "$iotaHornetPowEnabled" = "true" ] || [ "$iotaHornetPowEnabled" = "false" ]; then
    if [ "$parser" != "$iotaHornetPowEnabled" ]; then
        sudo jq '.restAPI.powEnabled = '$iotaHornetPowEnabled'' $iotaHornetHome/$iotaHornetConfig.json|sponge $iotaHornetHome/$iotaHornetConfig.json
        restartIotaHornet=true
        echo "iotaHornetPowEnabled" >> /tmp/iotaHornetParsing
    fi
fi