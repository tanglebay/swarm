#!/bin/bash

parser="$(jq '.db.autoRevalidation' $iotaHornetHome/$iotaHornetConfig.json)"
if [ "$parser" != "$iotaHornetAutoRevalidation" ]; then
    sudo jq '.db.autoRevalidation = '$iotaHornetAutoRevalidation'' $iotaHornetHome/$iotaHornetConfig.json|sponge $iotaHornetHome/$iotaHornetConfig.json
    restartIotaHornet=true
    echo "iotaHornetAutoRevalidation" >> /tmp/iotaHornetParsing
fi