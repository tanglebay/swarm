#!/bin/bash

while [ $exitCode -lt 1 ]; do
    source $swarmConfigs/iota-inx-dashboard.cfg
    clear
    CHOICE=$(
        whiptail --title "INX - Dashboard" --menu "\nChoose an option" 24 65 0 \
        "1)" "INX-Dashboard Info" \
        "2)" "INX-Dashboard Configuration" \
        "3)" "INX-Dashboard Management" \
        "4)" "INX-Dashboard Installer" 3>&2 2>&1 1>&3
    )

    exitstatus=$?
    if [ "$exitstatus" = "1" ]; then
        exitCode=1
    fi

    case $CHOICE in
        "1)")
            source $inxDashboardModules/inxDashboardInfo
        ;;
        "2)")
            while [ $exitCode -lt 1 ]; do
                clear
                CHOICE=$(
                    whiptail --title "INX-Dashboard - Configuration" --menu "\nChoose an option" 24 65 0 \
                    "1)" "INX-Dashboard Configuration" \
                    "2)" "Advanced Configuration" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        source $inxDashboardModules/inxDashboardConfiguration
                    ;;
                    "2)")
                        while [ $exitCode -lt 1 ]; do
                            clear
                            CHOICE=$(
                                whiptail --title "INX-Dashboard - Configuration" --menu "\nChoose an option" 24 65 0 \
                                "1)" "config.json" \
                                "2)" "inx-dashboard.cfg (SWARM)" 3>&2 2>&1 1>&3
                            )

                            exitstatus=$?
                            if [ "$exitstatus" = "1" ]; then
                                exitCode=1
                            fi

                            case $CHOICE in
                                "1)")
                                    if [ -f "$inxDashboardHome/config.json" ]; then
                                        sudo $swarmCLEditor $inxDashboardHome/config.json
                                        if (whiptail --title "INX-Dashboard - Configuration" --yesno --defaultno "Would you like to restart INX-Dashboard now?" 8 65); then
                                            {
                                                echo 0
                                                echo 50
                                                sudo systemctl restart inx-dashboard > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while INX-Dashboard is restarting..." 8 65 0
                                        fi
                                    else
                                        whiptail --title "INX-Dashboard - Configuration" --msgbox "INX-Dashboard is not installed." 8 65
                                    fi
                                ;;
                                "2)")
                                    sudo $swarmCLEditor $swarmConfigs/inx-dashboard.cfg
                                    if [ -f "/usr/bin/inx-dashboard" ]; then
                                        if (whiptail --title "INX-Dashboard - Configuration" --yesno --defaultno "Would you like to restart INX-Dashboard now?" 8 65); then
                                            {
                                                echo 0
                                                source $inxDashboardModules/inxDashboardParser
                                                echo 50
                                                sudo systemctl restart inx-dashboard > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while INX-Dashboard is restarting..." 8 65 0
                                        fi
                                    fi
                                ;;
                            esac
                        done
                        exitCode=0
                    ;;
                esac
            done
            exitCode=0
        ;;
        "3)")
            if [ -f "/usr/bin/inx-dashboard" ]; then
                while [ $exitCode -lt 1 ]; do
                    clear
                    CHOICE=$(
                        whiptail --title "INX-Dashboard - Management" --menu "\nChoose an option" 24 65 0 \
                        "1)" "Show INX-Dashboard log" \
                        "2)" "Stop/Start INX-Dashboard" \
                        "3)" "Reset INX-Dashboard" \
                        "4)" "Reset INX-Dashboard config" 3>&2 2>&1 1>&3
                    )

                    exitstatus=$?
                    if [ "$exitstatus" = "1" ]; then
                        exitCode=1
                    fi

                    case $CHOICE in
                        "1)")
                            # Display last 65 lines of log
                            sudo journalctl -fu inx-dashboard | less -FRSXM
                            clear
                        ;;
                        "2)")
                            CHOICE=$(
                                whiptail --title "INX-Dashboard - Management" --menu "\nChoose your option" 24 65 0 \
                                "1)" "Restart INX-Dashboard" \
                                "2)" "Start INX-Dashboard" \
                                "3)" "Stop INX-Dashboard" \
                                "4)" "Status INX-Dashboard" 3>&2 2>&1 1>&3
                            )
                            case $CHOICE in
                                "1)")
                                    {
                                        echo 0
                                        echo 50
                                        sudo systemctl restart inx-dashboard > /dev/null 2>&1
                                        echo 100
                                        sleep 0.25
                                    } | whiptail --gauge "Please wait while INX-Dashboard is restarting..." 8 65 0
                                    whiptail --title "INX-Dashboard - Management" --msgbox "INX-Dashboard successfully restarted" 8 65
                                ;;
                                "2)")
                                    {
                                        echo 0
                                        echo 50
                                        sudo systemctl start inx-dashboard > /dev/null 2>&1
                                        echo 100
                                        sleep 0.25
                                    } | whiptail --gauge "Please wait while INX-Dashboard is starting..." 8 65 0
                                    whiptail --title "INX-Dashboard - Management" --msgbox "INX-Dashboard successfully started" 8 65
                                ;;
                                "3)")
                                    {
                                        echo 0
                                        echo 50
                                        sudo systemctl stop inx-dashboard > /dev/null 2>&1
                                        echo 100
                                        sleep 0.25
                                    } | whiptail --gauge "Please wait while INX-Dashboard is stopping..." 8 65 0
                                    whiptail --title "INX-Dashboard - Management" --msgbox "INX-Dashboard successfully stopped." 8 65
                                ;;
                                "4)")
                                    inxDashboardStatus="$(sudo systemctl status inx-dashboard)"
                                    whiptail --title "INX-Dashboard - Management" --msgbox "$inxDashboardStatus" 15 65
                                ;;
                            esac
                        ;;
                        "3)")
                            if (whiptail --title "INX-Dashboard - Management" --yesno --defaultno "Are you sure you want to reset the INX-MQTT database?" 8 65); then
                                source $swarmConfigs/inx-dashboard.cfg
                                {
                                    echo 0
                                    echo 25
                                    sudo systemctl stop inx-dashboard > /dev/null 2>&1
                                    echo 50
                                    sudo rm -rf $inxDashboardHome/database > /dev/null 2>&1
                                    echo 75
                                    sudo systemctl start inx-dashboard > /dev/null 2>&1
                                    echo 100
                                    sleep 0.25
                                } | whiptail --gauge "Please wait while the database reset is running (this may take a while)..." 8 65 0
                                whiptail --title "INX-Dashboard - Debugging" --msgbox "INX-Dashboard database successfully reset." 8 65
                            fi
                        ;;
                        "4)")
                            if (whiptail --title "INX-Dashboard - Management" --yesno --defaultno "Are you sure you want to reset the INX-Dashboard config file?" 8 65); then
                                source $swarmConfigs/inx-dashboard.cfg
                                {
                                    echo 0
                                    echo 20
                                    sudo systemctl stop inx-dashboard > /dev/null 2>&1
                                    echo 40
                                    sudo -u inx wget -q -O $inxDashboardHome/config.json https://raw.githubusercontent.com/iotaledger/inx-dashboard/develop/config_template.json
                                    echo 60
                                    source $inxDashboardModules/inxDashboardParser
                                    echo 80
                                    sudo systemctl start inx-dashboard > /dev/null 2>&1
                                    echo 100
                                    sleep 0.25
                                } | whiptail --gauge "Please wait while the config reset is running (this may take a while)..." 8 65 0
                                whiptail --title "INX-Dashboard - Debugging" --msgbox "INX-Dashboard config successfully reset." 8 65
                            fi
                        ;;
                    esac
                done
                exitCode=0
            else
                whiptail --title "INX-Dashboard" --msgbox "Sorry, but INX-Dashboard is not installed." 8 65
            fi
        ;;
        "4)")
            while [ $exitCode -lt 1 ]; do
                CHOICE=$(
                    whiptail --title "INX-Dashboard - Installer" --menu "\nChoose your option" 24 65 0 \
                    "1)" "Update INX-Dashboard" \
                    "2)" "Install INX-Dashboard" \
                    "3)" "Remove INX-Dashboard" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        if [ -f "/usr/bin/inx-dashboard" ]; then
                            if (whiptail --title "INX-Dashboard - Installer" --yesno --defaultno "Do you really want to update INX-Dashboard?" 8 65); then
                                # Update INX-Dashboard
                                source $inxDashboardModules/inxDashboardVersion
                                if [ "$latestInxDashboardVersion" != "$inxDashboardVersion" ]; then
                                    {
                                        echo 0
                                        echo 33
                                        source $inxDashboardModules/inxDashboardVersion
                                        echo 66
                                        source $inxDashboardModules/inxDashboardInstaller                      
                                        echo 100
                                        sleep 0.5
                                    } | whiptail --gauge "Please wait while INX-Dashboard is updated..." 8 65 0
                                    newHornetShimmerVersion=$(/usr/bin/inx-dashboard -v | awk '{ print $2 }')
                                    if [ "$inxDashboardVersion" != "$newInxDashboardVersion" ]; then
                                        {
                                            # CALL MODULE CONFIGPARSER
                                            source $inxDashboardModules/inxDashboardParser
                                            sudo systemctl restart inx-dashboard 2>/dev/null
                                        } | whiptail --gauge "Please wait while parsing the configuration..." 8 65 0
                                    fi
                                    whiptail --title "INX-Dashboard - Installer" --msgbox "INX-Dashboard successfully updated.\n\nChecksum: $inxDashboardChecksum" 10 65
                                else
                                    whiptail --title "INX-Dashboard - Installer" --msgbox "Congratulations, you have already installed the latest version of INX-Dashboard." 8 65
                                fi
                                unset inxDashboardChecksum
                            fi
                        else
                            whiptail --title "INX-Dashboard - Installer" --msgbox "Sorry, but INX-Dashboard is not installed." 8 65
                        fi
                    ;;
                    "2)")
                        if [ -f "/usr/bin/hornet-shimmer" ]; then
                            # INSTALL INX-Dashboard
                            if [ ! -f "/usr/bin/inx-dashboard" ]; then
                                {
                                    echo 0
                                    echo 10
                                    source $swarmConfigs/inx-dashboard.cfg
                                    echo 30
                                    source $inxDashboardModules/inxDashboardVersion
                                    echo 40
                                    source $inxDashboardModules/inxDashboardInstaller
                                    echo 50
                                    if [ -f "/usr/bin/inx-dashboard" ]; then
                                        source $swarmConfigs/inx-dashboard.cfg
                                        echo 60
                                        # CALL MODULE CONFIGPARSER
                                        source $inxDashboardModules/inxDashboardParser
                                        echo 70
                                        sudo systemctl start inx-dashboard > /dev/null 2>&1
                                        echo 80
                                        sleep 2
                                        inxDashboardStatus="$(systemctl show -p ActiveState --value inx-dashboard)"
                                        if [ "$inxDashboardStatus" != "active" ]; then
                                            sudo systemctl restart inx-dashboard > /dev/null 2>&1
                                        fi
                                        echo 100
                                    fi
                                } | whiptail --gauge "Please wait while installing INX-Dashboard..." 8 65 0
                                if [ -f "/usr/bin/inx-dashboard" ]; then
                                    if [ -f "/tmp/inx-dashboard.checksum" ]; then
                                        inxDashboardChecksum=$(cat /tmp/inx-dashboard.checksum)
                                    fi
                                    whiptail --title "INX-Dashboard - Installer" --msgbox "INX-Dashboard installation finished!\n\nChecksum: $inxDashboardChecksum" 17 65
                                    if [ -f "/tmp/inx-dashboard.checksum" ]; then
                                        sudo rm -rf /tmp/inx-dashboard.checksum > /dev/null 2>&1
                                    fi
                                else
                                    {
                                        echo 0
                                        echo 25
                                        source $swarmConfigs/inx-dashboard.cfg
                                        echo 50
                                        source $inxDashboardModules/inxDashboardRemoval
                                        echo 75
                                        echo 100
                                    } | whiptail --gauge "Please wait while the INX-Dashboard files are removed...." 8 65 0
                                    whiptail --title "INX-Dashboard - Installer" --msgbox "Error while installing INX-Dashboard! Please try again later." 8 65
                                fi
                            else
                                if [ -f "/usr/bin/inx-dashboard" ]; then
                                    whiptail --title "INX-Dashboard - Installer" --msgbox "INX-Dashboard already installed." 8 65
                                else
                                    if [ "$inxDashboardSkipInstallation" = "true" ]; then
                                        whiptail --title "INX-Dashboard - Installer" --msgbox "Installation of INX-Dashboard aborted." 8 65
                                    fi
                                fi
                            fi
                            unset inxDashboardSkipInstallation inxDashboardChecksum
                        else
                            whiptail --title "INX-Dashboard" --msgbox "To be able to install INX-Dashboard, a compatible node must be installed first." 8 65
                        fi
                    ;;
                    "3)")
                        if (whiptail --title "INX-Dashboard - Installer" --yesno --defaultno "Do you really want to remove INX-Dashboard?" 8 65); then
                            {
                                echo 0
                                echo 50
                                source $inxDashboardModules/inxDashboardRemoval
                                echo 100
                                sleep 0.5
                            } | whiptail --gauge "Please wait while INX-Dashboard will be removed..." 8 65 0
                            whiptail --title "INX-Dashboard - Installer" --msgbox "INX-Dashboard successfully removed." 8 65
                        fi
                    ;;
                esac
            done
            exitCode=0
        ;;
    esac
done
exitCode=0