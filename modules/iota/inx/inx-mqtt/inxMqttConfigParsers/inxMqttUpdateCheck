#!/bin/bash

parser=$(jq '.app.checkForUpdates' $inxMqttHome/$inxMqttConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$inxMqttUpdateCheck" ]; then
    sudo jq '.app.checkForUpdates = '$inxMqttUpdateCheck'' $inxMqttHome/$inxMqttConfig.json|sponge $inxMqttHome/$inxMqttConfig.json
    restartInxMqtt=true
    echo "inxMqttUpdateCheck" >> /tmp/inxMqttParsing
fi
