#!/bin/bash

if [[ ${#iotaBeeIdentity} -gt 70 ]]; then
    sudo systemctl stop iota-bee
    sudo rm -rf $iotaBeeHome/identity.key 2>/dev/null
    sudo systemctl start iota-bee
    sleep 3
    iotaBeeIdentity=$(cat $iotaBeeHome/identity.key | sed -n '2 p')
    sudo sed -i 's~^iotaBeeIdentity=.*~iotaBeeIdentity="'$iotaBeeIdentity'"~' $swarmConfigs/iota-bee.cfg
    echo "iotaBeeAlias - Identity has more than 70 chars" >> /tmp/iotaBeeParsing
fi

if [ "$iotaBeeResetIdentity" != "true" ]; then
    if [ -f "$iotaBeeHome/identity.key" ]; then
        parser=$(cat $iotaBeeHome/identity.key | sed -n '2 p')
    fi
    if [ "$parser" != "$iotaBeeIdentity" ]; then
        if [ ! -z "$iotaBeeIdentity" ]; then
            sudo systemctl stop iota-bee
            sudo -u bee echo "-----BEGIN PRIVATE KEY-----" > $iotaBeeHome/identity.key
            sudo -u bee echo "$iotaBeeIdentity" >> $iotaBeeHome/identity.key
            sudo -u bee echo "-----END PRIVATE KEY-----" >> $iotaBeeHome/identity.key
            sudo systemctl start iota-bee
            echo "iotaBeeIdentity - Identity not equal using from var now" >> /tmp/iotaBeeParsing
        else
            if [ -f "$iotaBeeHome/identity.key" ]; then
                beeIdentity=$(cat $iotaBeeHome/identity.key | sed -n '2 p')
            fi
            if [ ! -z "$iotaBeeIdentity" ]; then
                sudo sed -i 's~^iotaBeeIdentity=.*~iotaBeeIdentity="'$iotaBeeIdentity'"~' $swarmConfigs/iota-bee.cfg
            else
                sudo systemctl stop iota-bee
                sudo rm -rf $iotaBeeHome/identity.key 2>/dev/null
                sudo systemctl start iota-bee
                sleep 3
                iotaBeeIdentity=$(cat $iotaBeeHome/identity.key | sed -n '2 p')
                sudo sed -i 's~^iotaBeeIdentity=.*~iotaBeeIdentity="'$iotaBeeIdentity'"~' $swarmConfigs/iota-bee.cfg
                echo "iotaBeeIdentity - Identity not equal using new identity" >> /tmp/iotaBeeParsing
            fi
        fi
    fi
else
    {
        echo 0
        echo 20
        sudo systemctl stop iota-bee
        echo 40
        sudo rm -rf $iotaBeeHome/identity.key 2>/dev/null
        echo 60
        sudo systemctl start iota-bee
        echo 80
        beeIdentity=$(cat $iotaBeeHome/identity.key | sed -n '2 p')
        echo 100
        if [ ! -z "$iotaBeeIdentity" ]; then
            sudo sed -i 's~^iotaBeeIdentity=.*~iotaBeeIdentity="'$iotaBeeIdentity'"~' $swarmConfigs/iota-bee.cfg
        else
            sudo sed -i 's~^iotaBeeIdentity=.*~iotaBeeIdentity=""~' $swarmConfigs/iota-bee.cfg
        fi
        sleep 1
    } | whiptail --gauge "Generate new identity for IotaBee..." 8 65 0
    echo "iotaBeeIdentity - Reset Identity" >> /tmp/iotaBeeParsing
fi

unset iotaBeeResetIdentity
