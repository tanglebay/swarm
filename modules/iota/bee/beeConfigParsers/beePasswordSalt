#!/bin/bash

parser="$(jq '.dashboard.auth.passwordSalt' $iotaBeeHome/$iotaBeeConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$iotaBeePasswordSalt" ]; then
    sudo jq '.dashboard.auth.passwordSalt = "'$iotaBeePasswordSalt'"' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeePasswordSalt" >> /tmp/iotaBeeParsing
fi

unset parser
