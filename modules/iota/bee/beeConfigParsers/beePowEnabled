#!/bin/bash

parser="$(jq '.restApi.featureProofOfWork' $iotaBeeHome/$iotaBeeConfig.json)"
if [ "$parser" != "$iotaBeePowEnabled" ]; then
    sudo jq '.restApi.featureProofOfWork = '$iotaBeePowEnabled'' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeePowEnabled" >> /tmp/iotaBeeParsing
fi

unset parser
