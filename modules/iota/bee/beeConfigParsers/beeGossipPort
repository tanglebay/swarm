#!/bin/bash

parser="$(jq '.network.bindAddress' $iotaBeeHome/$iotaBeeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp$iotaBeeGossipPort" ]; then
    sudo jq '.network.bindAddress = "/ip4/0.0.0.0/tcp/'$iotaBeeGossipPort'"' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeeGossipPort" >> /tmp/iotaBeeParsing
fi

unset parser
