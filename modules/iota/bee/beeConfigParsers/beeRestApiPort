#!/bin/bash

parser="$(jq '.restApi.bindAddress' $iotaBeeHome/$iotaBeeConfig.json)"
parser=$(echo $parser | tr -d '"/.')
if [ "$parser" != "ip40000tcp14266" ]; then
    sudo jq '.restApi.bindAddress = "/ip4/0.0.0.0/tcp/14266"' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeeRestApiPort" >> /tmp/iotaBeeParsing
fi

unset parser
