#!/bin/bash

parser="$(jq '.pruning.enabled' $iotaBeeHome/$iotaBeeConfig.json)"
if [ "$parser" != "$iotaBeePruningEnabled" ]; then
    sudo jq '.pruning.enabled = '$iotaBeePruningEnabled'' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeePruning1" >> /tmp/iotaBeeParsing
fi
parser="$(jq '.pruning.delay' $iotaBeeHome/$iotaBeeConfig.json)"
if [ "$parser" != "$iotaBeePruningDelay" ]; then
    sudo jq '.pruning.delay = '$iotaBeePruningDelay'' $iotaBeeHome/$iotaBeeConfig.json|sponge $iotaBeeHome/$iotaBeeConfig.json
    restartIotaBee=true
    echo "iotaBeePruning2" >> /tmp/iotaBeeParsing
fi

unset parser
