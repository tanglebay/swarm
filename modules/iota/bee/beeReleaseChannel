#!/bin/bash

# Check if release is changed
if [ "$iotaBeeRelease" != "$currentIotaBeeRelease" ]; then
    {
        echo 0
        echo 20
        source $iotaBeeModules/beeRemoval
        echo 40
        source $iotaBeeModules/beeInstaller
        echo 60
        source $iotaBeeModules/beeParser
        echo 80
        if [ "$iotaBeeUpdated" = "true" ] || [ "$restartIotaBee" = "true" ]; then
            sudo systemctl restart iota-bee
            unset restartIotaBee
        fi
        echo 100
    } | whiptail --gauge "Please wait while Bee (IOTA) is prepared..." 8 65 0
    whiptail --title "Bee (IOTA) - Configuration" --msgbox "New release channel ($iotaBeeRelease) applied and Bee (IOTA) was reinstalled!" 8 65
fi