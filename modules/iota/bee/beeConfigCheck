#!/bin/bash

if [ ! -s "$iotaBeeHome/$iotaBeeConfig.json" ] && [ "$iotaBeeNetwork" = "mainnet" ]; then
    #source $iotaBeeModules/beeVersion
    sudo wget -q -O $iotaBeeHome/$iotaBeeConfig.json https://github.com/iotaledger/bee/releases/download/v${latestIotaBeeVersion}/$iotaBeeConfig.json
fi
if [ ! -s "$iotaBeeHome/$iotaBeeConfig.json" ] && [ "$iotaBeeNetwork" = "comnet" ]; then
    #source $iotaBeeModules/beeVersion
    sudo wget -q -O $iotaBeeHome/$iotaBeeConfig.json https://github.com/iotaledger/bee/releases/download/v${latestIotaBeeVersion}/$iotaBeeConfig.json
fi

if [ ! -s "$iotaBeeHome/$iotaBeeConfig.json" ] && [ "$iotaBeeNetwork" = "testnet" ]; then
    #source $iotaBeeModules/beeVersion
    sudo wget -q -O $iotaBeeHome/$iotaBeeConfig.json https://github.com/iotaledger/bee/releases/download/v${latestIotaBeeVersion}/$iotaBeeConfig.json
fi

sudo chown bee:bee $iotaBeeHome/config.*.json > /dev/null 2>&1

if [ -f "/tmp/iotaBeeParsing" ]; then
    sudo rm -rf /tmp/iotaBeeParsing > /dev/null 2>&1
fi
