#!/bin/bash

# General
if ! id hornet >/dev/null 2>&1; then
    useradd --no-create-home --system hornet >/dev/null
fi

if [ ! -d "$hornetHome" ]; then
    sudo mkdir -p $hornetHome > /dev/null 2>&1
    sudo chown -R hornet:hornet $hornetHome > /dev/null 2>&1
fi

# Install GO
if ! [ -x "$(command -v go)" ] > /dev/null 2>&1; then
    sudo snap install go --classic > /dev/null 2>&1
fi

# Create Service
if [ ! -f "/lib/systemd/system/hornet.service" ]; then
    sudo cp -rf $swarmHome/templates/hornet/hornet.service /lib/systemd/system/hornet.service
    if [ ! -f "/etc/default/hornet" ]; then
        if [ "$hornetNetwork" = "mainnet" ]; then 
            echo "OPTIONS=\"--config config.json\"" > /etc/default/hornet
        fi
        if [ "$hornetNetwork" = "comnet" ]; then 
            echo "OPTIONS=\"--config config-comnet.json\"" > /etc/default/hornet
        fi
        if [ "$hornetNetwork" = "devnet" ]; then 
            echo "OPTIONS=\"--config config-devnet.json\"" > /etc/default/hornet
        fi
    fi
    if [ ! -f "/etc/systemd/system/multi-user.target.wants/hornet.service" ]; then
        sudo systemctl enable hornet > /dev/null 2>&1
    fi
    sudo systemctl daemon-reload
fi

##############################################################################################################################################

# Create dir if not exist
sudo mkdir -p /tmp/hornet > /dev/null 2>&1

if [ "$osArchitecture" = "amd64" ]; then
    hornetArchitecture="x86_64"
fi
if [ "$osArchitecture" = "arm64" ]; then
    hornetArchitecture="ARM64"
fi

if [ ! -z "$hornetArchitecture" ]; then
    # Download latest hornet
    ( cd /tmp/hornet/ ; sudo wget -q https://github.com/iotaledger/hornet/releases/download/v${latestHornetVersion}/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture.tar.gz )
    if [ -f "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture.tar.gz" ]; then
        hornetDownloadChecksum=$(sudo shasum -a 256 /tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture.tar.gz | awk '{ print $1 }')
    fi
    # Download checksum
    ( cd /tmp/hornet/ ; sudo wget -q https://github.com/iotaledger/hornet/releases/download/v${latestHornetVersion}/checksums.txt )
    if [ -f "/tmp/hornet/checksums.txt" ]; then
        hornetChecksum=$(sudo grep "HORNET-${latestHornetVersion}_Linux_$hornetArchitecture.tar.gz" /tmp/hornet/checksums.txt | awk '{ print $1 }')
    fi

    # Unzip archive
    if [ "$hornetDownloadChecksum" = "$hornetChecksum" ] && [ ! -z "$hornetDownloadChecksum" ] && [ ! -z "$hornetChecksum" ]; then
        ( cd /tmp/hornet ; sudo tar -xzf /tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture.tar.gz ) > /dev/null 2>&1

        # Copy binary
        if [ -f "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/hornet" ]; then
            hornetStatus="$(systemctl show -p ActiveState --value hornet)"
            if [ "$hornetStatus" = "active" ]; then
                sudo systemctl stop hornet > /dev/null 2>&1
            fi

            sudo cp -rf /tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/hornet /usr/bin/hornet > /dev/null 2>&1
            sudo chmod +x /usr/bin/hornet > /dev/null 2>&1
            newHornetBinary=true
        fi
    fi
    unset hornetDownloadChecksum hornetChecksum
fi


##############################################################################################################################################

if [ "$newHornetBinary" = "true" ]; then
    ### Mainnet Config
    if [ "$hornetNetwork" = "mainnet" ]; then
        if [ -f "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config.json" ]; then
            sudo cp -rf /tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config.json /var/lib/hornet/config.json > /dev/null 2>&1
        fi
        if [ -s "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config.json" ]; then
            newHornetConfig=true
        fi
    fi

    ### Comnet Config
    if [ "$hornetNetwork" = "comnet" ]; then
        if [ -f "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config-comnet.json" ]; then
            sudo cp -rf /tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config-comnet.json /var/lib/hornet/config-comnet.json > /dev/null 2>&1
        fi
        if [ -s "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config-comnet.json" ]; then
            newHornetConfig=true
        fi
    fi

    ### Devnet Config
    if [ "$hornetNetwork" = "devnet" ]; then
        if [ -f "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config-devnet.json" ]; then
            sudo cp -rf /tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config-devnet.json /var/lib/hornet/config-devnet.json > /dev/null 2>&1
        fi
        if [ -s "/tmp/hornet/HORNET-${latestHornetVersion}_Linux_$hornetArchitecture/config-devnet.json" ]; then
            newHornetConfig=true
        fi
    fi
fi

##############################################################################################################################################

if [ "$newHornetConfig" = "true" ]; then
    # Run installer modules
    sudo chown -R hornet:hornet $hornetHome > /dev/null 2>&1

    restartHornet=true
    hornetUpdated=true
fi

# Remove temporary files
sudo rm -rf /tmp/hornet > /dev/null 2>&1


unset newHornetBinary
unset newHornetConfig