#!/bin/bash

parser="$(jq '.mqtt.bindAddress' $hornetHome/$hornetConfig.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:1883" ]; then
    sudo jq '.mqtt.bindAddress = "localhost:1883"' $hornetHome/$hornetConfig.json|sponge $hornetHome/$hornetConfig.json
    restartHornet=true
    echo "hornetMqtt" >> /tmp/hornetParsing
fi