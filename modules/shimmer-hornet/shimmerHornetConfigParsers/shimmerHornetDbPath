#!/bin/bash

if [ "$shimmerHornetNetwork" = "mainnet" ]; then
    parser=$(jq '.db.path' $shimmerHornetHome/$shimmerHornetConfig.json)
    parser=$(echo $parser | tr -d '"')
    if [ "$parser" != "mainnet/database" ]; then
        sudo jq '.db.path = "mainnet/database"' $shimmerHornetHome/$shimmerHornetConfig.json|sponge $shimmerHornetHome/$shimmerHornetConfig.json
        restartShimmerHornet=true
        echo "shimmerHornetDbPath" >> /tmp/shimmerHornetParsing
    fi
fi
