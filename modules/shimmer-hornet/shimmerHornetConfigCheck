#!/bin/bash

if [ ! -s "$shimmerHornetHome/$shimmerHornetConfig.json" ]; then
    if [ "$shimmerHornetRelease" = "stable" ]; then
        if [ -f "$shimmerHornetHome/$shimmerHornetConfig.json" ]; then
            sudo chown hornet:hornet $shimmerHornetHome/$shimmerHornetConfig.json > /dev/null 2>&1
        fi
        sudo -u hornet wget -q -O $shimmerHornetHome/$shimmerHornetConfig.json https://raw.githubusercontent.com/iotaledger/hornet/shimmer/$shimmerHornetConfig.json
    else
        if [ -f "$shimmerHornetHome/$shimmerHornetConfig.json" ]; then
            sudo chown hornet:hornet $shimmerHornetHome/$shimmerHornetConfig.json > /dev/null 2>&1
        fi
        sudo -u hornet wget -q -O $shimmerHornetHome/$shimmerHornetConfig.json https://raw.githubusercontent.com/iotaledger/hornet/develop/$shimmerHornetConfig.json
    fi
fi

if [ -f "/tmp/shimmerHornetParsing" ]; then
    sudo rm -rf /tmp/shimmerHornetParsing > /dev/null 2>&1
fi