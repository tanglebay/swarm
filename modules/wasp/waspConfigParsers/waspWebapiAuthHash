#!/bin/bash

if [ -z "$waspWebapiAuthHash" ]; then
    if [ ! -d "/etc/nginx/swarm/wasp" ]; then
        sudo mkdir -p /etc/nginx/wasp
    fi
    sudo htpasswd -bcB /etc/nginx/swarm/wasp/.htpasswd_webapi $waspWebapiAuthUsername $waspWebapiAuthPassword > /dev/null 2>&1
    if [ -f "/usr/sbin/nginx" ]; then
        sudo systemctl reload nginx > /dev/null 2>&1
    fi
else
    sudo htpasswd -bcB /etc/nginx/swarm/wasp/.htpasswd_webapi $waspWebapiAuthUsername $waspWebapiAuthPassword > /dev/null 2>&1
    if [ -f "/usr/sbin/nginx" ]; then
        sudo systemctl reload nginx > /dev/null 2>&1
    fi
fi
