#!/bin/bash

source $swarmConfigs/shimmer-wasp.cfg

# Run Config checks
source $shimmerWaspModule/shimmerWaspConfigCheck

#############################################################################################

source $shimmerWaspConfigParsers/shimmerWaspDashboardAddress

source $shimmerWaspConfigParsers/shimmerWaspDashboardAuthUsername

source $shimmerWaspConfigParsers/shimmerWaspInxAddress

source $shimmerWaspConfigParsers/shimmerWaspNanomsgEnabled

source $shimmerWaspConfigParsers/shimmerWaspNanomsgPort

source $shimmerWaspConfigParsers/shimmerWaspPeeringPort

source $shimmerWaspConfigParsers/shimmerWaspPrometheusAddress

source $shimmerWaspConfigParsers/shimmerWaspPrometheusEnabled

source $shimmerWaspConfigParsers/shimmerWaspUpdateCheck

source $shimmerWaspConfigParsers/shimmerWaspWalEnabled

source $shimmerWaspConfigParsers/shimmerWaspWebapiAddress

source $shimmerWaspConfigParsers/shimmerWaspWebapiAuthBasicUsername

source $shimmerWaspConfigParsers/shimmerWaspWebapiEnabled

# Set file permissions
sudo chown wasp:wasp $shimmerWaspHome/*.json > /dev/null 2>&1

# Unset all var
unset parser
