#!/bin/bash

parser="$(jq '.peering.peeringURL' $waspHome/config.json)"
if [ "$parser" != "0.0.0.0:$shimmerWaspPeeringPort" ]; then
    sudo jq '.peering.peeringURL = "0.0.0.0:'$shimmerWaspPeeringPort'"' $shimmerWaspHome/config.json|sponge $shimmerWaspHome/config.json
    restartShimmerWasp=true
    echo "shimmerWaspPeeringPeeringURL" >> /tmp/shimmerWaspParsing
fi

parser="$(jq '.peering.port' $waspHome/config.json)"
if [ $shimmerWaspPeeringPort -eq $shimmerWaspPeeringPort ] && [ "$parser" != "$shimmerWaspPeeringPort" ] && [ "$shimmerWaspPeeringPort" -gt 0 ] 2>/dev/null; then
    sudo jq '.peering.port = '$shimmerWaspPeeringPort'' $shimmerWaspHome/config.json|sponge $shimmerWaspHome/config.json
    restartShimmerWasp=true
    echo "shimmerWaspPeeringPort" >> /tmp/shimmerWaspParsing
fi
