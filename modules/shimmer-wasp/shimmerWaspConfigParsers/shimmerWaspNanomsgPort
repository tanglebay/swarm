#!/bin/bash

parser="$(jq '.nanomsg.port' $shimmerWaspHome/config.json)"
if [ $waspNanomsgPort -eq $shimmerWaspNanomsgPort ] && [ "$parser" != "$shimmerWaspNanomsgPort" ] && [ "$shimmerWaspNanomsgPort" -gt 0 ] 2>/dev/null; then
    sudo jq '.nanomsg.port = '$shimmerWaspNanomsgPort'' $shimmerWaspHome/config.json|sponge $shimmerWaspHome/config.json
    restartShimmerWasp=true
fi