#!/bin/bash

parser=$(jq '.inx.address' $shimmerWaspHome/$shimmerWaspConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:9031" ]; then
    sudo jq '.inx.address = "localhost:9031"' $shimmerWaspHome/config.json|sponge $shimmerWaspHome/config.json
    restartShimmerWasp=true
    echo "shimmerWaspInxAddress" >> /tmp/shimmerWaspParsing
fi