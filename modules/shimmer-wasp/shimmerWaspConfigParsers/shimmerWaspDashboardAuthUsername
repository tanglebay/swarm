#!/bin/bash

parser="$(jq '.dashboard.auth.basic.username' $shimmerWaspHome/config.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$shimmerWaspDashboardAuthUsername" ] && [ ! -z "$shimmerWaspDashboardAuthUsername" ] 2>/dev/null; then
    sudo jq '.dashboard.auth.basic.username = "'$shimmerWaspDashboardAuthUsername'"' $shimmerWaspHome/config.json|sponge $shimmerWaspHome/config.json
    restartShimmerWasp=true
fi