#!/bin/bash

parser="$(jq '.peering.netid' $shimmerWaspHome/config.json)"
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$shimmerWaspNetworkId:$shimmerWaspPeeringPort" ]; then
    sudo jq '.peering.netid = "'$shimmerWaspNetworkId':'$shimmerWaspPeeringPort'"' $shimmerWaspHome/config.json|sponge $shimmerWaspHome/config.json
    restartShimmerWasp=true
fi