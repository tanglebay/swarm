#!/bin/bash

parser=$(jq '.prometheus.bindAddress' $shimmerWaspHome/config.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "0.0.0.0:$shimmerWaspPrometheusAddress" ]; then
    sudo jq '.prometheus.bindAddress = "0.0.0.0:'$shimmerWaspPrometheusAddress'"' $shimmerWaspHome/config.json|sponge $shimmerWaspHome/config.json
    restartShimmerWasp=true
    echo "shimmerWaspPrometheusAdress" >> /tmp/shimmerWaspParsing
fi
