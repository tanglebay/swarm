#!/bin/bash

parser=$(jq '.restAPI.bindAddress' $iotaInxIrcMetadataHome/$iotaInxIrcMetadataConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:9698" ]; then
    sudo jq '.restAPI.bindAddress = "localhost:9698"' $iotaInxIrcMetadataHome/$iotaInxIrcMetadataConfig.json|sponge $iotaInxIrcMetadataHome/$iotaInxIrcMetadataConfig.json
    restartIotaInxIrcMetadata=true
    echo "iotaInxIrcMetadataApiAddress" >> /tmp/iotaInxIrcMetadataParsing
fi
