#!/bin/bash

parser=$(jq '.inx.address' $iotaInxParticipationHome/$iotaInxParticipationConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$iotaInxParticipationInxAddress" ]; then
    sudo jq '.inx.address = "'$iotaInxParticipationInxAddress'"' $iotaInxParticipationHome/$iotaInxParticipationConfig.json|sponge $iotaInxParticipationHome/$iotaInxParticipationConfig.json
    restartIotaInxParticipation=true
    newIotaInxParticipationInxAddress=true
    echo "iotaInxParticipationInxAddress" >> /tmp/iotaInxParticipationParsing
fi
