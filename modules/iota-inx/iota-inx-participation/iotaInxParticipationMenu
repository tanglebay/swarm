#!/bin/bash

while [ $exitCode -lt 1 ]; do
    source $swarmConfigs/iota-inx-participation.cfg
    clear
    CHOICE=$(
        whiptail --title "INX [IOTA] Participation" --menu "\nChoose an option" 24 65 0 \
        "" "" \
        "1)" "INX-Participation Info" \
        "2)" "INX-Participation Tools" \
        "3)" "INX-Participation Configuration" \
        "4)" "INX-Participation Management" \
        "5)" "INX-Participation Installer" 3>&2 2>&1 1>&3
    )

    exitstatus=$?
    if [ "$exitstatus" = "1" ]; then
        exitCode=1
    fi

    case $CHOICE in
        "1)")
            source $iotaInxParticipationModule/iotaInxParticipationInfo
        ;;
        "2)")
            while [ $exitCode -lt 1 ]; do
                clear
                CHOICE=$(
                    whiptail --title "INX [IOTA] Participation" --menu "\nChoose an option" 24 65 0 \
                    "" "" \
                    "1)" "Event Validation" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        while [ $exitCode -lt 1 ]; do
                            clear
                            CHOICE=$(
                                whiptail --title "INX [IOTA] Participation" --menu "\nChoose your option" 24 65 0 \
                                "" "" \
                                "1)" "Event Validation" \
                                "2)" "Show Latest Event Results" 3>&2 2>&1 1>&3
                            )
                            exitstatus=$?
                            if [ "$exitstatus" = "1" ]; then
                                exitCode=1
                            fi
                            case $CHOICE in
                                "1)")
                                    CHOICE=$(
                                        whiptail --title "INX [IOTA] Participation" --menu "\nChoose your option" 18 65 0 \
                                        "" "" \
                                        "1)" "Validate Staking Event" \
                                        "2)" "Validate Voting Event" 3>&2 2>&1 1>&3
                                    )
                                    exitstatus=$?
                                    if [ "$exitStatus" = "1" ]; then
                                        exitCode=1
                                    fi
                                    if [ "$exitstatus" != "1" ]; then
                                        case $CHOICE in
                                            "1)")
                                                eventType="staking"
                                            ;;
                                            "2)")
                                                eventType="ballot"
                                            ;;
                                        esac
                                        eventId=$(whiptail --inputbox "\nPlease enter the [IOTA] event id you want to validate" 10 65 --title "INX [IOTA] Participation" 3>&1 1>&2 2>&3)
                                        exitStatus=$?
                                        if [ $exitStatus != 1 ] && [ ! -z "$eventId" ]; then
                                            eventNetwork="iota"
                                            source $swarmSharedModule/eventValidation
                                        fi
                                    fi
                                ;;
                                "2)")
                                    if [ -f "/tmp/participation-event.log" ]; then
                                        clear
                                        echo ""
                                        cat /tmp/participation-event.log
                                        echo ""
                                        echo ""
                                        read -n 1 -s -r -p "Press any key to continue"
                                    else
                                        whiptail --title "INX [IOTA] Participation" --msgbox "No [IOTA] event log file was found, please validate an event first." 8 65
                                    fi
                                ;;
                            esac
                        done
                        exitCode=0
                    ;;
                esac
            done
            exitCode=0
        ;;
        "3)")
            while [ $exitCode -lt 1 ]; do
                clear
                CHOICE=$(
                    whiptail --title "INX-Participation [IOTA] Configuration" --menu "\nChoose an option" 24 65 0 \
                    "" "" \
                    "1)" "INX-Participation Configuration" \
                    "2)" "Advanced Configuration" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        source $iotaInxParticipationModule/iotaInxParticipationConfiguration
                    ;;
                    "2)")
                        while [ $exitCode -lt 1 ]; do
                            clear
                            CHOICE=$(
                                whiptail --title "INX-Participation [IOTA] Configuration" --menu "\nChoose an option" 24 65 0 \
                                "" "" \
                                "1)" "Config.json" \
                                "2)" "IOTA-INX-Participation.cfg (SWARM)" 3>&2 2>&1 1>&3
                            )

                            exitstatus=$?
                            if [ "$exitstatus" = "1" ]; then
                                exitCode=1
                            fi

                            case $CHOICE in
                                "1)")
                                    if [ -f "$iotaInxParticipationHome/config.json" ]; then
                                        sudo $swarmCLEditor $iotaInxParticipationHome/config.json
                                        if (whiptail --title "INX-Participation [IOTA] Configuration" --yesno --defaultno "Would you like to restart [IOTA] INX-Participation now?" 8 65); then
                                            if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                                sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                            fi
                                            {
                                                echo 0
                                                echo 50
                                                sudo systemctl restart iota-inx-participation > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while [IOTA] INX-Participation is restarting..." 8 65 0
                                            if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                                sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                            fi
                                        fi
                                    else
                                        whiptail --title "INX-Participation [IOTA] Configuration" --msgbox "[IOTA] INX-Participation is not installed." 8 65
                                    fi
                                ;;
                                "2)")
                                    sudo $swarmCLEditor $swarmConfigs/iota-inx-participation.cfg
                                    if [ -f "/usr/bin/iota-inx-participation" ]; then
                                        if (whiptail --title "INX-Participation [IOTA] Configuration" --yesno --defaultno "Would you like to restart [IOTA] INX-Participation now?" 8 65); then
                                            if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                                sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                            fi
                                            {
                                                echo 0
                                                source $iotaInxParticipationModule/iotaInxParticipationParser
                                                echo 50
                                                sudo systemctl restart iota-inx-participation > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while [IOTA] INX-Participation is restarting..." 8 65 0
                                            if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                                sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                            fi
                                        fi
                                    fi
                                ;;
                            esac
                        done
                        exitCode=0
                    ;;
                esac
            done
            exitCode=0
        ;;
        "4)")
            if [ -f "/usr/bin/iota-inx-participation" ]; then
                while [ $exitCode -lt 1 ]; do
                    clear
                    CHOICE=$(
                        whiptail --title "INX-Participation [IOTA] Management" --menu "\nChoose an option" 24 65 0 \
                        "" "" \
                        "1)" "INX-Participation Log" \
                        "2)" "Stop/Start INX-Participation" \
                        "3)" "Reset INX-Participation Database" \
                        "4)" "Reset INX-Participation Config" 3>&2 2>&1 1>&3
                    )

                    exitstatus=$?
                    if [ "$exitstatus" = "1" ]; then
                        exitCode=1
                    fi

                    case $CHOICE in
                        "1)")
                            while [ $exitCode -lt 1 ]; do
                                clear
                                CHOICE=$(
                                    whiptail --title "INX-Participation [IOTA] Management" --menu "\nChoose your option" 24 65 0 \
                                    "" "" \
                                    "1)" "Show Live Log" \
                                    "2)" "Show Latest PANIC" 3>&2 2>&1 1>&3
                                )
                                exitstatus=$?
                                if [ "$exitstatus" = "1" ]; then
                                    exitCode=1
                                fi
                                case $CHOICE in
                                    "1)")
                                        sudo journalctl -fu iota-inx-participation
                                    ;;
                                    "2)")
                                        appLogDepth=10000
                                        appLogDepth=$(whiptail --inputbox "\nPlease enter a higher depth if no PANIC was found (this may take longer)" 10 65 $appLogDepth --title "INX-Participation [IOTA] Management" 3>&1 1>&2 2>&3)
                                        exitstatus=$?
                                        if [ "$exitstatus" != "1" ] && [ $appLogDepth -eq $appLogDepth ] 2>/dev/null; then
                                            echo ""
                                            echo "Please wait while the log is searched for a PANIC..."
                                            echo ""
                                            echo ""
                                            sudo journalctl -u iota-inx-participation -n $appLogDepth | grep -A 2 -B 2 -e PANIC | tail -n 5
                                            echo ""
                                            echo ""
                                            read -rsn1 -p "Press any key to exit."
                                        fi
                                        unset appLogDepth
                                    ;;
                                esac
                            done
                            exitCode=0
                        ;;
                        "2)")
                            while [ $exitCode -lt 1 ]; do
                                CHOICE=$(
                                    whiptail --title "INX-Participation [IOTA] Management" --menu "\nChoose your option" 24 65 0 \
                                    "" "" \
                                    "1)" "Restart INX-Participation" \
                                    "2)" "Start INX-Participation" \
                                    "3)" "Stop INX-Participation" \
                                    "4)" "Status INX-Participation" 3>&2 2>&1 1>&3
                                )
                                exitStatus=$?
                                if [ "$exitStatus" = "1" ]; then
                                    exitCode=1
                                fi
                                case $CHOICE in
                                    "1)")
                                        if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                            sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                        fi
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl restart iota-inx-participation > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while [IOTA] INX-Participation is restarting..." 8 65 0
                                        if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                            sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                        fi
                                        whiptail --title "INX-Participation [IOTA] Management" --msgbox "[IOTA] INX-Participation successfully restarted." 8 65
                                    ;;
                                    "2)")
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl start iota-inx-participation > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while [IOTA] INX-Participation is starting..." 8 65 0
                                        if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                            sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                        fi
                                        whiptail --title "INX-Participation [IOTA] Management" --msgbox "[IOTA] INX-Participation successfully started." 8 65
                                    ;;
                                    "3)")
                                        if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                            sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                        fi
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl stop iota-inx-participation > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while [IOTA] INX-Participation is stopping..." 8 65 0
                                        whiptail --title "INX-Participation [IOTA] Management" --msgbox "[IOTA] INX-Participation successfully stopped." 8 65
                                    ;;
                                    "4)")
                                        iotaInxParticipationStatus="$(sudo systemctl status inx-participation)"
                                        whiptail --title "INX-Participation [IOTA] Management" --msgbox "$iotaInxParticipationStatus" 15 65
                                    ;;
                                esac
                            done
                            exitCode=0
                        ;;
                        "3)")
                            if (whiptail --title "INX-Participation [IOTA] Management" --yesno --defaultno "Are you sure you want to reset the [IOTA] INX-Participation database?" 8 65); then
                                source $swarmConfigs/iota-inx-participation.cfg
                                if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                    sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                fi
                                {
                                    echo 0
                                    echo 25
                                    sudo systemctl stop iota-inx-participation > /dev/null 2>&1
                                    echo 50
                                    sudo rm -rf $iotaInxParticipationHome/database > /dev/null 2>&1
                                    echo 75
                                    sudo systemctl start iota-inx-participation > /dev/null 2>&1
                                    echo 100
                                    sleep 0.25
                                } | whiptail --gauge "Please wait while the [IOTA] INX-Participation database reset is running (this may take a while)..." 8 65 0
                                if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                    sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                fi
                                whiptail --title "INX-Participation [IOTA] Debugging" --msgbox "[IOTA] INX-Participation database successfully reset." 8 65
                            fi
                        ;;
                        "4)")
                            if (whiptail --title "INX-Participation [IOTA] Management" --yesno --defaultno "Are you sure you want to reset the [IOTA] INX-Participation config file?" 8 65); then
                                source $swarmConfigs/iota-inx-participation.cfg
                                if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                    sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                fi
                                {
                                    echo 0
                                    echo 20
                                    sudo systemctl stop iota-inx-participation > /dev/null 2>&1
                                    echo 40
                                    sudo -u inx wget -q -O $iotaInxParticipationHome/config.json https://raw.githubusercontent.com/iotaledger/inx-participation/develop/config_template.json
                                    echo 60
                                    source $iotaInxParticipationModule/iotaInxParticipationParser
                                    echo 80
                                    sudo systemctl start iota-inx-participation > /dev/null 2>&1
                                    echo 100
                                    sleep 0.25
                                } | whiptail --gauge "Please wait while the [IOTA] INX-Participation config reset is running (this may take a while)..." 8 65 0
                                if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                    sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                fi
                                whiptail --title "INX-Participation [IOTA] Debugging" --msgbox "[IOTA] INX-Participation config successfully reset." 8 65
                            fi
                        ;;
                    esac
                done
                exitCode=0
            else
                whiptail --title "INX [IOTA] Participation" --msgbox "[IOTA] INX-Participation is not installed." 8 65
            fi
        ;;
        "5)")
            while [ $exitCode -lt 1 ]; do
                CHOICE=$(
                    whiptail --title "INX-Participation [IOTA] Installer" --menu "\nChoose your option" 24 65 0 \
                    "" "" \
                    "1)" "Update INX-Participation" \
                    "2)" "Install INX-Participation" \
                    "3)" "Remove INX-Participation" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        if [ -f "/usr/bin/iota-inx-participation" ]; then
                            if (whiptail --title "INX-Participation [IOTA] Installer" --yesno --defaultno "Do you really want to update [IOTA] INX-Participation?" 8 65); then
                                if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                    sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                fi
                                # Update INX-Participation
                                source $iotaInxParticipationModule/iotaInxParticipationVersion
                                if [ ! -z "$latestIotaInxParticipationVersion" ]; then
                                    {
                                        echo 0
                                        echo 33
                                        source $iotaInxParticipationModule/iotaInxParticipationVersion
                                        echo 66
                                        source $iotaInxParticipationModule/iotaInxParticipationInstaller                      
                                        echo 100
                                        sleep 0.5
                                    } | whiptail --gauge "Please wait while [IOTA] INX-Participation is updated..." 8 65 0
                                    {
                                        # CALL MODULE CONFIGPARSER
                                        source $iotaInxParticipationModule/iotaInxParticipationParser
                                        sudo systemctl restart iota-inx-participation 2>/dev/null
                                    } | whiptail --gauge "Please wait while parsing the [IOTA] INX-Participation configuration..." 8 65 0
                                    iotaInxParticipationChecksum=$(cat /tmp/iota-inx-participation.checksum 2>/dev/null)
                                    whiptail --title "INX-Participation [IOTA] Installer" --msgbox "[IOTA] INX-Participation successfully updated.\n\nChecksum: $iotaInxParticipationChecksum" 10 65
                                    if [ -f "/tmp/iota-inx-participation.checksum" ]; then
                                        sudo rm -rf /tmp/iota-inx-participation.checksum 2>/dev/null
                                        unset iotaInxParticipationChecksum
                                    fi
                                    if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                        sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                    fi
                                else
                                    whiptail --title "INX-Participation [IOTA] Installer" --msgbox "Sorry, but [IOTA] INX-Participation update aborted." 10 65
                                fi
                            fi
                        else
                            whiptail --title "INX [IOTA] Participation" --msgbox "Sorry, but [IOTA] INX-Participation is not installed." 8 65
                        fi
                    ;;
                    "2)")
                        if [ -f "/usr/bin/iota-hornet" ]; then
                            # INSTALL INX-Participation
                            if [ ! -f "/usr/bin/iota-inx-participation" ]; then
                                if [ ! -f "/tmp/iota-inx-participation.lock" ]; then
                                    sudo touch /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                fi
                                source $swarmConfigs/iota-inx-participation.cfg
                                source $iotaInxParticipationModule/iotaInxParticipationVersion
                                {
                                    echo 0
                                    echo 10
                                    echo 30
                                    source $iotaInxParticipationModule/iotaInxParticipationInstaller
                                    echo 50
                                    if [ -f "/usr/bin/iota-inx-participation" ]; then
                                        source $swarmConfigs/iota-inx-participation.cfg
                                        echo 60
                                        # CALL MODULE CONFIGPARSER
                                        source $iotaInxParticipationModule/iotaInxParticipationParser
                                        echo 70
                                        sudo systemctl start iota-inx-participation > /dev/null 2>&1
                                        echo 80
                                        sleep 2
                                        iotaInxParticipationStatus="$(systemctl show -p ActiveState --value iota-inx-participation)"
                                        if [ "$iotaInxParticipationStatus" != "active" ]; then
                                            sudo systemctl restart iota-inx-participation > /dev/null 2>&1
                                        fi
                                        echo 100
                                    fi
                                } | whiptail --gauge "Please wait while installing [IOTA] INX-Participation..." 8 65 0
                                if [ -f "/usr/bin/iota-inx-participation" ]; then
                                    if [ -f "/tmp/iota-inx-participation.checksum" ]; then
                                        iotaInxParticipationChecksum=$(cat /tmp/iota-inx-participation.checksum)
                                    fi
                                    whiptail --title "INX-Participation [IOTA] Installer" --msgbox "[IOTA] INX-Participation installation finished.\n\nChecksum: $iotaInxParticipationChecksum" 17 65
                                    if [ -f "/tmp/iota-inx-participation.checksum" ]; then
                                        sudo rm -rf /tmp/iota-inx-participation.checksum > /dev/null 2>&1
                                    fi
                                    if (whiptail --title "INX-Participation [IOTA] Installer" --yesno --defaultno "Do you want to make the API routes public for [IOTA] INX-Participation?" 8 65); then
                                        source $iotaInxParticipationModule/iotaInxParticipationApiRoutes
                                    fi
                                else
                                    {
                                        echo 0
                                        echo 25
                                        source $swarmConfigs/iota-inx-participation.cfg
                                        echo 50
                                        source $iotaInxParticipationModule/iotaInxParticipationRemoval
                                        echo 75
                                        echo 100
                                    } | whiptail --gauge "Please wait while the [IOTA] INX-Participation files are removed...." 8 65 0
                                    whiptail --title "INX-Participation [IOTA] Installer" --msgbox "Error while installing [IOTA] INX-Participation! Please try again later." 8 65
                                fi
                                if [ -f "/tmp/iota-inx-participation.lock" ]; then
                                    sudo rm -rf /tmp/iota-inx-participation.lock > /dev/null 2>&1
                                fi
                            else
                                if [ -f "/usr/bin/iota-inx-participation" ]; then
                                    whiptail --title "INX-Participation [IOTA] Installer" --msgbox "[IOTA] INX-Participation already installed." 8 65
                                else
                                    if [ "$iotaInxParticipationSkipInstallation" = "true" ]; then
                                        whiptail --title "INX-Participation [IOTA] Installer" --msgbox "Installation of [IOTA] INX-Participation aborted." 8 65
                                    fi
                                fi
                            fi
                            unset iotaInxParticipationSkipInstallation iotaInxParticipationChecksum
                        else
                            whiptail --title "INX [IOTA] Participation" --msgbox "To be able to install [IOTA] INX-Participation, a compatible node must be installed first." 8 65
                        fi
                    ;;
                    "3)")
                        if (whiptail --title "INX-Participation [IOTA] Installer" --yesno --defaultno "Do you really want to remove [IOTA] INX-Participation?" 8 65); then
                            {
                                echo 0
                                echo 50
                                source $iotaInxParticipationModule/iotaInxParticipationRemoval
                                echo 100
                                sleep 0.5
                            } | whiptail --gauge "Please wait while [IOTA] INX-Participation will be removed..." 8 65 0
                            whiptail --title "INX-Participation [IOTA] Installer" --msgbox "[IOTA] INX-Participation successfully removed." 8 65
                        fi
                    ;;
                esac
            done
            exitCode=0
        ;;
    esac
done
exitCode=0