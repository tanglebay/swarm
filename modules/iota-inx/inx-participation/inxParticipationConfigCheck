#!/bin/bash

if [ ! -s "$inxParticipationHome/$inxParticipationConfig.json" ]; then
    if [ -f "$inxParticipationHome/$inxParticipationConfig.json" ]; then
        sudo chown inx:inx $inxParticipationHome/$inxParticipationConfig.json > /dev/null 2>&1
    fi
    sudo -u inx wget -q -O $inxParticipationHome/$inxParticipationConfig.json https://raw.githubusercontent.com/iotaledger/inx-indexer/develop/$inxParticipationConfig.json
fi

if [ -f "/tmp/inxParticipationParsing" ]; then
    sudo rm -rf /tmp/inxParticipationParsing > /dev/null 2>&1
fi