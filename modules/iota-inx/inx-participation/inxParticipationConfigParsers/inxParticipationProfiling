#!/bin/bash

parser=$(jq '.profiling.bindAddress' $inxParticipationHome/$inxParticipationConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:6072" ]; then
    sudo jq '.profiling.bindAddress = "localhost:6072"' $inxParticipationHome/$inxParticipationConfig.json|sponge $inxParticipationHome/$inxParticipationConfig.json
    restartInxParticipation=true
    echo "inxParticipationProfiling" >> /tmp/inxParticipationParsing
fi
