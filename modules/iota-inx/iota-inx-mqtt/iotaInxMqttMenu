#!/bin/bash

while [ $exitCode -lt 1 ]; do
    source $swarmConfigs/iota-inx-mqtt.cfg
    clear
    CHOICE=$(
        whiptail --title "INX [IOTA] MQTT" --menu "\nChoose an option" 24 65 0 \
        "" "" \
        "1)" "INX-MQTT Info" \
        "2)" "INX-MQTT Configuration" \
        "3)" "INX-MQTT Management" \
        "4)" "INX-MQTT Installer" 3>&2 2>&1 1>&3
    )

    exitstatus=$?
    if [ "$exitstatus" = "1" ]; then
        exitCode=1
    fi

    case $CHOICE in
        "1)")
            source $iotaInxMqttModule/iotaInxMqttInfo
        ;;
        "2)")
            while [ $exitCode -lt 1 ]; do
                clear
                CHOICE=$(
                    whiptail --title "INX-MQTT [IOTA] Configuration" --menu "\nChoose an option" 24 65 0 \
                    "" "" \
                    "1)" "INX-MQTT Configuration" \
                    "2)" "Advanced Configuration" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        source $iotaInxMqttModule/iotaInxMqttConfiguration
                    ;;
                    "2)")
                        while [ $exitCode -lt 1 ]; do
                            clear
                            CHOICE=$(
                                whiptail --title "INX-MQTT [IOTA] Configuration" --menu "\nChoose an option" 24 65 0 \
                                "" "" \
                                "1)" "Config.json" \
                                "2)" "IOTA-INX-Mqtt.cfg (SWARM)" 3>&2 2>&1 1>&3
                            )

                            exitstatus=$?
                            if [ "$exitstatus" = "1" ]; then
                                exitCode=1
                            fi

                            case $CHOICE in
                                "1)")
                                    if [ -f "$iotaInxMqttHome/config.json" ]; then
                                        sudo $swarmCLEditor $iotaInxMqttHome/config.json
                                        if (whiptail --title "INX-MQTT [IOTA] Configuration" --yesno --defaultno "Would you like to restart [IOTA] INX-MQTT now?" 8 65); then
                                            if [ ! -f "/tmp/iota-inx-mqtt.lock" ]; then
                                                sudo touch /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                            fi
                                            {
                                                echo 0
                                                echo 50
                                                sudo systemctl restart iota-inx-mqtt > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while [IOTA] INX-MQTT is restarting..." 8 65 0
                                            if [ -f "/tmp/iota-inx-mqtt.lock" ]; then
                                                sudo rm -rf /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                            fi
                                        fi
                                    else
                                        whiptail --title "INX-MQTT [IOTA] Configuration" --msgbox "[IOTA] INX-MQTT is not installed." 8 65
                                    fi
                                ;;
                                "2)")
                                    sudo $swarmCLEditor $swarmConfigs/iota-inx-mqtt.cfg
                                    if [ -f "/usr/bin/inx-mqtt" ]; then
                                        if (whiptail --title "INX-MQTT [IOTA] Configuration" --yesno --defaultno "Would you like to restart [IOTA] INX-MQTT now?" 8 65); then
                                            if [ ! -f "/tmp/iota-inx-mqtt.lock" ]; then
                                                sudo touch /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                            fi
                                            {
                                                echo 0
                                                source $iotaInxMqttModule/iotaInxMqttParser
                                                echo 50
                                                sudo systemctl restart iota-inx-mqtt > /dev/null 2>&1
                                                echo 100
                                                sleep 0.25
                                            } | whiptail --gauge "Please wait while [IOTA] INX-MQTT is restarting..." 8 65 0
                                            if [ -f "/tmp/iota-inx-mqtt.lock" ]; then
                                                sudo rm -rf /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                            fi
                                        fi
                                    fi
                                ;;
                            esac
                        done
                        exitCode=0
                    ;;
                esac
            done
            exitCode=0
        ;;
        "3)")
            if [ -f "/usr/bin/iota-inx-mqtt" ]; then
                while [ $exitCode -lt 1 ]; do
                    clear
                    CHOICE=$(
                        whiptail --title "INX-MQTT [IOTA] Management" --menu "\nChoose an option" 24 65 0 \
                        "" "" \
                        "1)" "INX-MQTT Log" \
                        "2)" "Stop/Start INX-MQTT" \
                        "3)" "Reset INX-MQTT Config" 3>&2 2>&1 1>&3
                    )

                    exitstatus=$?
                    if [ "$exitstatus" = "1" ]; then
                        exitCode=1
                    fi

                    case $CHOICE in
                        "1)")
                            while [ $exitCode -lt 1 ]; do
                                clear
                                CHOICE=$(
                                    whiptail --title "INX-MQTT [IOTA] Management" --menu "\nChoose your option" 24 65 0 \
                                    "" "" \
                                    "1)" "Show Live Log" \
                                    "2)" "Show Latest PANIC" 3>&2 2>&1 1>&3
                                )
                                exitstatus=$?
                                if [ "$exitstatus" = "1" ]; then
                                    exitCode=1
                                fi
                                case $CHOICE in
                                    "1)")
                                        sudo journalctl -fu iota-inx-mqtt
                                    ;;
                                    "2)")
                                        appLogDepth=10000
                                        appLogDepth=$(whiptail --inputbox "\nPlease enter a higher depth if no PANIC was found (this may take longer)" 10 65 $appLogDepth --title "INX-MQTT [IOTA] Management" 3>&1 1>&2 2>&3)
                                        sudo journalctl -u iota-inx-mqtt -n $appLogDepth | grep -A 2 -B 2 -e PANIC | tail -n 5 > /tmp/swarm-app-panic.log
                                        appPanicLog=$(cat /tmp/swarm-app-panic.log)
                                        if [ ! -z "$appPanicLog" ]; then
                                            echo ""
                                            echo ""
                                            read -rsn1 -p "Press any key to exit."
                                            if [ -f "/tmp/swarm-app-panic.log" ]; then
                                                sudo rm -rf /tmp/swarm-app-panic.log > /dev/null 2>&
                                            fi
                                        else
                                            whiptail --title "INX-MQTT [IOTA] Management" --msgbox "No PANIC entry found or try again with a higher depth." 8 65
                                        fi
                                        if [ -f "/tmp/swarm-app-panic.log" ]; then
                                            sudo rm -rf /tmp/swarm-app-panic.log > /dev/null 2>&
                                        fi
                                        unset appLogDepth appPanicLog
                                    ;;
                                esac
                            done
                            exitCode=0
                        ;;
                        "2)")
                            while [ $exitCode -lt 1 ]; do
                                CHOICE=$(
                                    whiptail --title "INX-MQTT [IOTA] Management" --menu "\nChoose your option" 24 65 0 \
                                    "" "" \
                                    "1)" "Restart INX-MQTT" \
                                    "2)" "Start INX-MQTT" \
                                    "3)" "Stop INX-MQTT" \
                                    "4)" "Status INX-MQTT" 3>&2 2>&1 1>&3
                                )
                                exitStatus=$?
                                if [ "$exitStatus" = "1" ]; then
                                    exitCode=1
                                fi
                                case $CHOICE in
                                    "1)")
                                        if [ ! -f "/tmp/iota-inx-mqtt.lock" ]; then
                                            sudo touch /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                        fi
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl restart iota-inx-mqtt > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while [IOTA] INX-MQTT is restarting..." 8 65 0
                                        if [ -f "/tmp/iota-inx-mqtt.lock" ]; then
                                            sudo rm -rf /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                        fi
                                        whiptail --title "INX-MQTT [IOTA] Management" --msgbox "[IOTA] INX-MQTT successfully restarted." 8 65
                                    ;;
                                    "2)")
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl start iota-inx-mqtt > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while [IOTA] INX-MQTT is starting..." 8 65 0
                                        if [ -f "/tmp/iota-inx-mqtt.lock" ]; then
                                            sudo rm -rf /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                        fi
                                        whiptail --title "INX-MQTT [IOTA] Management" --msgbox "[IOTA] INX-MQTT successfully started." 8 65
                                    ;;
                                    "3)")
                                        if [ ! -f "/tmp/iota-inx-mqtt.lock" ]; then
                                            sudo touch /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                        fi
                                        {
                                            echo 0
                                            echo 50
                                            sudo systemctl stop iota-inx-mqtt > /dev/null 2>&1
                                            echo 100
                                            sleep 0.25
                                        } | whiptail --gauge "Please wait while [IOTA] INX-MQTT is stopping..." 8 65 0
                                        whiptail --title "INX-MQTT [IOTA] Management" --msgbox "[IOTA] INX-MQTT successfully stopped." 8 65
                                    ;;
                                    "4)")
                                        iotaInxMqttStatus="$(sudo systemctl status iota-inx-mqtt)"
                                        whiptail --title "INX-MQTT [IOTA] Management" --msgbox "$iotaInxMqttStatus" 15 65
                                    ;;
                                esac
                            done
                            exitCode=0
                        ;;
                        "3)")
                            if (whiptail --title "INX-MQTT [IOTA] Management" --yesno --defaultno "Are you sure you want to reset the [IOTA] INX-MQTT config file?" 8 65); then
                                source $swarmConfigs/iota-inx-mqtt.cfg
                                if [ ! -f "/tmp/iota-inx-mqtt.lock" ]; then
                                    sudo touch /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                fi
                                {
                                    echo 0
                                    echo 20
                                    sudo systemctl stop iota-inx-mqtt > /dev/null 2>&1
                                    echo 40
                                    sudo -u inx wget -q -O $iotaInxMqttHome/config.json https://raw.githubusercontent.com/iotaledger/inx-mqtt/develop/config_template.json
                                    echo 60
                                    source $iotaInxMqttModule/iotaInxMqttParser
                                    echo 80
                                    sudo systemctl start iota-inx-mqtt > /dev/null 2>&1
                                    echo 100
                                    sleep 0.25
                                } | whiptail --gauge "Please wait while the [IOTA] INX-MQTT config reset is running (this may take a while)..." 8 65 0
                                if [ -f "/tmp/iota-inx-mqtt.lock" ]; then
                                    sudo rm -rf /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                fi
                                whiptail --title "INX-MQTT [IOTA] Debugging" --msgbox "[IOTA] INX-MQTT config successfully reset." 8 65
                            fi
                        ;;
                    esac
                done
                exitCode=0
            else
                whiptail --title "[IOTA] INX-MQTT" --msgbox "Sorry, but [IOTA] INX-MQTT is not installed." 8 65
            fi
        ;;
        "4)")
            while [ $exitCode -lt 1 ]; do
                CHOICE=$(
                    whiptail --title "INX-MQTT [IOTA] Installer" --menu "\nChoose your option" 24 65 0 \
                    "" "" \
                    "1)" "Update INX-MQTT" \
                    "2)" "Install INX-MQTT" \
                    "3)" "Remove INX-MQTT" 3>&2 2>&1 1>&3
                )

                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi

                case $CHOICE in
                    "1)")
                        if [ -f "/usr/bin/iota-inx-mqtt" ]; then
                            if (whiptail --title "INX-MQTT [IOTA] Installer" --yesno --defaultno "Do you really want to update [IOTA] INX-MQTT?" 8 65); then
                                if [ ! -f "/tmp/iota-inx-mqtt.lock" ]; then
                                    sudo touch /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                fi
                                # Update INX-Mqtt
                                source $iotaInxMqttModule/iotaInxMqttVersion
                                if [ ! -z "$latestIotaInxMqttVersion" ]; then
                                    {
                                        echo 0
                                        echo 33
                                        source $iotaInxMqttModule/iotaInxMqttVersion
                                        echo 66
                                        source $iotaInxMqttModule/iotaInxMqttInstaller                      
                                        echo 100
                                        sleep 0.5
                                    } | whiptail --gauge "Please wait while [IOTA] INX-MQTT is updated..." 8 65 0
                                    {
                                        # CALL MODULE CONFIGPARSER
                                        source $iotaInxMqttModule/iotaInxMqttParser
                                        sudo systemctl restart iota-inx-mqtt 2>/dev/null
                                    } | whiptail --gauge "Please wait while parsing the [IOTA] INX-MQTT configuration..." 8 65 0
                                    iotaInxMqttChecksum=$(cat /tmp/iota-inx-mqtt.checksum 2>/dev/null)
                                    whiptail --title "INX-Mqtt [IOTA] Installer" --msgbox "[IOTA] INX-Mqtt successfully updated.\n\nChecksum: $iotaInxMqttChecksum" 10 65
                                    if [ -f "/tmp/iota-inx-mqtt.checksum" ]; then
                                        sudo rm -rf /tmp/iota-inx-mqtt.checksum 2>/dev/null
                                        unset iotaInxMqttChecksum
                                    fi
                                else
                                    whiptail --title "INX [IOTA] MQTT" --msgbox "Sorry, but [IOTA] INX-MQTT update aborted." 8 65
                                fi
                                if [ -f "/tmp/iota-inx-mqtt.lock" ]; then
                                    sudo rm -rf /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                fi
                            fi
                        else
                            whiptail --title "INX [IOTA] MQTT" --msgbox "Sorry, but [IOTA] INX-MQTT is not installed." 8 65
                        fi
                    ;;
                    "2)")
                        if [ -f "/usr/bin/iota-hornet" ]; then
                            # INSTALL INX-MQTT
                            if [ ! -f "/usr/bin/iota-inx-mqtt" ]; then
                                if [ ! -f "/tmp/iota-inx-mqtt.lock" ]; then
                                    sudo touch /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                fi
                                source $swarmConfigs/iota-inx-mqtt.cfg
                                source $iotaInxMqttModule/iotaInxMqttVersion
                                {
                                    echo 0
                                    echo 20
                                    source $iotaInxMqttModule/iotaInxMqttInstaller
                                    echo 40
                                    if [ -f "/usr/bin/iota-inx-mqtt" ]; then
                                        source $swarmConfigs/iota-inx-mqtt.cfg
                                        echo 50
                                        # CALL MODULE CONFIGPARSER
                                        source $iotaInxMqttModule/iotaInxMqttParser
                                        echo 60
                                        sudo systemctl start iota-inx-mqtt > /dev/null 2>&1
                                        echo 70
                                        sleep 2
                                        iotaInxMqttStatus="$(systemctl show -p ActiveState --value iota-inx-mqtt)"
                                        if [ "$iotaInxMqttStatus" != "active" ]; then
                                            sudo systemctl restart iota-inx-mqtt > /dev/null 2>&1
                                        fi
                                        echo 80
                                        source $proxyModule/proxyAutomaticDeployment
                                        echo 100
                                    fi
                                } | whiptail --gauge "Please wait while installing [IOTA] INX-MQTT..." 8 65 0
                                if [ -f "/usr/bin/iota-inx-mqtt" ]; then
                                    if [ -f "/tmp/iota-inx-mqtt.checksum" ]; then
                                        iotaInxMqttChecksum=$(cat /tmp/iota-inx-mqtt.checksum)
                                    fi
                                    whiptail --title "INX-MQTT [IOTA] Installer" --msgbox "[IOTA] INX-MQTT installation finished!\n\nChecksum: $iotaInxMqttChecksum" 17 65
                                    if [ -f "/tmp/iota-inx-mqtt.checksum" ]; then
                                        sudo rm -rf /tmp/iota-inx-mqtt.checksum > /dev/null 2>&1
                                    fi
                                    if (whiptail --title "INX-MQTT [IOTA] Installer" --yesno --defaultno "Do you want to make the API routes public for [IOTA] INX-MQTT?" 8 65); then
                                        source $iotaInxMqttModule/iotaInxMqttApiRoutes
                                    fi
                                else
                                    {
                                        echo 0
                                        echo 25
                                        source $swarmConfigs/iota-inx-mqtt.cfg
                                        echo 50
                                        source $iotaInxMqttModule/iotaInxMqttRemoval
                                        echo 75
                                        echo 100
                                    } | whiptail --gauge "Please wait while the [IOTA] INX-MQTT files are removed...." 8 65 0
                                    whiptail --title "INX-MQTT [IOTA] Installer" --msgbox "Error while installing [IOTA] INX-MQTT! Please try again later." 8 65
                                fi
                                if [ -f "/tmp/iota-inx-mqtt.lock" ]; then
                                    sudo rm -rf /tmp/iota-inx-mqtt.lock > /dev/null 2>&1
                                fi
                            else
                                if [ -f "/usr/bin/iota-inx-mqtt" ]; then
                                    whiptail --title "INX-MQTT [IOTA] Installer" --msgbox "[IOTA] INX-MQTT already installed." 8 65
                                else
                                    if [ "$iotaInxMqttSkipInstallation" = "true" ]; then
                                        whiptail --title "INX-MQTT [IOTA] Installer" --msgbox "Installation of [IOTA] INX-MQTT aborted." 8 65
                                    fi
                                fi
                            fi
                            unset iotaInxMqttSkipInstallation iotaInxMqttChecksum
                        else
                            whiptail --title "INX [IOTA] MQTT" --msgbox "To be able to install [IOTA] INX-MQTT, a compatible node must be installed first." 8 65
                        fi
                    ;;
                    "3)")
                        if (whiptail --title "INX-MQTT [IOTA] Installer" --yesno --defaultno "Do you really want to remove [IOTA] INX-MQTT?" 8 65); then
                            {
                                echo 0
                                echo 50
                                source $iotaInxMqttModule/iotaInxMqttRemoval
                                echo 100
                                sleep 0.5
                            } | whiptail --gauge "Please wait while [IOTA] INX-MQTT will be removed..." 8 65 0
                            whiptail --title "INX-MQTT [IOTA] Installer" --msgbox "[IOTA] INX-MQTT successfully removed." 8 65
                        fi
                    ;;
                esac
            done
            exitCode=0
        ;;
    esac
done
exitCode=0