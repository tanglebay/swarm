#!/bin/bash

parser=$(jq '.profiling.bindAddress' $iotaInxMqttHome/$iotaInxMqttConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:6082" ]; then
    sudo jq '.profiling.bindAddress = "localhost:6082"' $iotaInxMqttHome/$iotaInxMqttConfig.json|sponge $iotaInxMqttHome/$iotaInxMqttConfig.json
    restartIotaInxMqtt=true
    echo "iotaInxMqttProfiling" >> /tmp/iotaInxMqttParsing
fi
