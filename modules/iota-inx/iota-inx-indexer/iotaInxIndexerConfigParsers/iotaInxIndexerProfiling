#!/bin/bash

parser=$(jq '.profiling.bindAddress' $iotaInxIndexerHome/$iotaInxIndexerConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:6081" ]; then
    sudo jq '.profiling.bindAddress = "localhost:6081"' $iotaInxIndexerHome/$iotaInxIndexerConfig.json|sponge $iotaInxIndexerHome/$iotaInxIndexerConfig.json
    restartIotaInxIndexer=true
    echo "iotaInxIndexerProfiling" >> /tmp/iotaInxIndexerParsing
fi
