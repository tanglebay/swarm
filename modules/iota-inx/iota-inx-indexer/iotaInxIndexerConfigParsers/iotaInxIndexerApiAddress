#!/bin/bash

parser=$(jq '.restAPI.bindAddress' $iotaInxIndexerHome/$iotaInxIndexerConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "localhost:9092" ]; then
    sudo jq '.restAPI.bindAddress = "localhost:9092"' $iotaInxIndexerHome/$iotaInxIndexerConfig.json|sponge $iotaInxIndexerHome/$iotaInxIndexerConfig.json
    restartIotaInxIndexer=true
    echo "iotaInxIndexerRestapiAddress" >> /tmp/iotaInxIndexerParsing
fi
