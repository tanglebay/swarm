#!/bin/bash

parser=$(jq '.inx.address' $iotaInxDashboardHome/$iotaInxDashboardConfig.json)
parser=$(echo $parser | tr -d '"')
if [ "$parser" != "$iotaInxDashboardInxAddress" ]; then
    sudo jq '.inx.address = "'$iotaInxDashboardInxAddress'"' $iotaInxDashboardHome/$iotaInxDashboardConfig.json|sponge $iotaInxDashboardHome/$iotaInxDashboardConfig.json
    restartIotaInxDashboard=true
    newIotaInxDashboardInxAddress=true
    echo "iotaInxDashboardInxAddress" >> /tmp/iotaInxDashboardParsing
fi
