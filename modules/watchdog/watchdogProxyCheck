#!/bin/bash

if [ "$watchdogProxyUfwCheck" = "true" ]; then
    if [ "$ufw" = "true" ]; then
        watchdogProxyUfwStatus=$(sudo ufw status)
        if [[ $watchdogProxyUfwStatus != *Status*inactive* ]]; then
            sudo ufw allow 80/tcp > /dev/null 2>&1
            echo "$restartDate [WATCHDOG] UFW port 80/tcp for the proxy not found and re-added." >> $swarmLogs/swarm.log
        fi
        unset watchdogProxyUfwStatus
    fi
fi
