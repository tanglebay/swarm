#!/bin/bash

if [ "$watchdogProxyUfwCheck" = "true" ]; then
    if [ "$ufw" = "true" ]; then
        watchdogProxyUfwStatus=$(sudo ufw status)
        if [[ $watchdogProxyUfwStatus != *inactive* ]]; then
            timestamp=`date '+%d-%m-%Y %H-%M-%S'`
            sudo ufw allow 80/tcp > /dev/null 2>&1
            echo "$timestamp [WATCHDOG] UFW port 80/tcp for the proxy not found and re-added." >> $swarmLogs/swarm.log
            unset timestamp
        fi
        unset watchdogProxyUfwStatus
    fi
fi
