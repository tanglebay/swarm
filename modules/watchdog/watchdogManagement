#!/bin/bash
while [ $exitCode -lt 1 ]; do
    clear
    CHOICE=$(
        whiptail --title "Watchdog [-] Management" --menu "\nChoose an option" 24 65 0 \
        "" "" \
        "1)" "Show Watchdog Log" \
        "2)" "Update Cronjob" 3>&2 2>&1 1>&3
    )
    exitstatus=$?
    if [ "$exitstatus" = "1" ]; then
        exitCode=1
    fi
    case $CHOICE in
        "1)")
            if [ -f "$swarmLogs/watchdog.log" ]; then
                sudo $swarmCLEditor $swarmLogs/watchdog.log
            fi
        ;;
        "2)")
            if (whiptail --title "Watchdog [-] Cronjob" --yesno --defaultno "Do you really want to update the cronjob?" 8 65); then
                ( crontab -l | grep -v -F "$watchdogCronCmd" ) | crontab - > /dev/null 2>&1
                ( crontab -l | grep -v -F "$watchdogCronCmd" ; echo "$watchdogCronJob" ) | crontab - > /dev/null 2>&1
                whiptail --title "Watchdog [-] Cronjob" --msgbox "Watchdog cronjob updated." 8 65
            fi
        ;;
    esac
done
exitCode=0