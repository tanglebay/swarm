#!/bin/bash

watchdogState="/tmp/watchdog.state"

if [ ! -f "$watchdogState" ]; then
    sudo touch $watchdogState
    # WATCHDOG
    echo "watchdogUpdateNumber=" >> $watchdogState
    # HORNET
    echo "iotaHornetStatusCounter=0" >> $watchdogState
    # HORNET-SHIMMER
    echo "shimmerHornetStatusCounter=0" >> $watchdogState
    # GOSHIMMER
    echo "goshimmerStatusCounter=0" >> $watchdogState
    # WASP
    echo "waspStatusCounter=0" >> $watchdogState
    # INX-Dashboard
    echo "shimmerInxDashboardStatusCounter=0" >> $watchdogState
    # INX-Indexer
    echo "shimmerInxIndexerStatusCounter=0" >> $watchdogState
    # INX-MQTT
    echo "shimmerInxMqttStatusCounter=0" >> $watchdogState
    # INX-Participation
    echo "shimmerInxParticipationStatusCounter=0" >> $watchdogState
    # INX-POI
    echo "shimmerInxPoiStatusCounter=0" >> $watchdogState
fi