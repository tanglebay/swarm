#!/bin/bash
############################################################################################################################################################
############################################################################################################################################################
# DO NOT EDIT THE LINES BELOW !!! DO NOT EDIT THE LINES BELOW !!! DO NOT EDIT THE LINES BELOW !!! DO NOT EDIT THE LINES BELOW !!!
############################################################################################################################################################
############################################################################################################################################################

source /var/lib/swarm/environment

############################################################################################################################################################

# Load Theme
source $swarmModule/swarmTheme

# Run PACKAGE module
source $swarmHome/packages

# Get Version
source $swarmHome/version

# Console
source $swarmHome/console

# Run module sudo check
source $swarmHome/requirements

# Run alias module
source $swarmModule/swarmAlias

# Load app versions
source $swarmModule/swarmAppVersions

# Start main script
exitCode=0
while [ $exitCode -lt 1 ]; do
    clear
    source $swarmModule/swarmConfigs

    ############################################################################################################################################################

    if [ "$(printf '%s\n' "$latestSwarmVersion" "$version" | sort -V | head -n1)" != "$latestSwarmVersion" ] && [ ! -z "$latestSwarmVersion" ]; then
        swarmVersionText="v$version-b$build - New Version v$latestSwarmVersion available!"
    else
        swarmVersionText="v$version-b$build"
    fi

    CHOICE=$(
        whiptail --title "SWARM [$swarmVersionText]" --menu "\nChoose an option:" 24 65 0 \
        "" "" \
        "1)" "Hornet Menu" \
        "2)" "INX Menu" \
        "3)" "GoShimmer Menu" \
        "4)" "Watchdog Menu" \
        "5)" "Proxy Menu" \
        "6)" "SWARM Menu" 3>&2 2>&1 1>&3
    )
    exitStatus=$?
    if [ "$exitStatus" = "1" ]; then
        clear
        exit 0
    fi

    case $CHOICE in
        "1)")
            while [ $exitCode -lt 1 ]; do
                clear
                CHOICE=$(
                    whiptail --title "Hornet" --menu "\nChoose an option" 24 65 0 \
                    "" "" \
                    "1)" "[IOTA] Hornet" \
                    "2)" "[SHIMMER] Hornet" 3>&2 2>&1 1>&3
                )
                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi
                case $CHOICE in
                    "1)")
                        source $iotaHornetModule/iotaHornetVersion
                        source $iotaHornetModule/iotaHornetMenu
                    ;;
                    "2)")
                        source $shimmerHornetModule/shimmerHornetMenu
                    ;;
                esac
            done
            exitCode=0
        ;;
        "2)")
            while [ $exitCode -lt 1 ]; do
                clear
                CHOICE=$(
                    whiptail --title "INX" --menu "\nChoose an option" 24 65 0 \
                    "" "" \
                    "1)" "[IOTA] INX" \
                    "2)" "[SHIMMER] INX" 3>&2 2>&1 1>&3
                )
                exitstatus=$?
                if [ "$exitstatus" = "1" ]; then
                    exitCode=1
                fi
                case $CHOICE in
                    "1)")
                        source $iotaHornetModule/iotaHornetVersion
                        if [ ! -z "$iotaHornetVersion" ] && [[ $iotaHornetVersion =~ ^2.* ]]; then
                            source $iotaInxModule/iotaInxMenu
                        else
                            whiptail --title "INX" --msgbox "This option will be available only with Hornet v2 (Stardust)." 8 65
                        fi
                    ;;
                    "2)")
                        source $shimmerInxModule/shimmerInxMenu
                    ;;
                esac
            done
            exitCode=0
        ;;
        "3)")
            # GOSHIMMER MENU
            source $goshimmerModule/goshimmerMenu
        ;;
        "4)")
            # SWARM Menu
            source $watchdogModule/watchdogMenu
        ;;
        "5)")
            # PROXY MENU
            source $proxyModule/proxyMenu
        ;;
        "6)")
            # SWARM Menu
            source $swarmModule/swarmMenu
        ;;
    esac
done

############################################################################################################################################################

exitCode=0
clear
exit 0
