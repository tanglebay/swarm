#!/bin/bash
#####################################################################################################
# SWARM
swarmPath="/opt/swarm"
swarmConfigsPath="$swarmPath/configs"
swarmModulePath="/$swarmPath/modules/swarm"
swarmSharedModulePath="/$swarmPath/modules/shared"
swarmTemplatesPath="/$swarmPath/templates"
swarmTmpPath="/tmp/swarm"
swarmLogsPath="/var/log/swarm"
swarmBackupPath="/etc/swarm/backup"
swarmDockerPath="$swarmPath/docker"
swarmDockerEnvFile="$swarmDockerPath/.env"
swarmDockerTraefikFile="$swarmDockerPath/docker-traefik.yml"
swarmDockerTraefikHttpsFile="$swarmDockerPath/docker-traefik-https.yml"
swarmDockerIotaFile="$swarmDockerPath/docker-iota.yml"
swarmDockerShimmerFile="$swarmDockerPath/docker-shimmer.yml"
swarmApps=(traefik iota-node shimmer-node iota-inx-dashboard iota-inx-indexer iota-inx-mqtt iota-inx-participation iota-inx-poi iota-inx-irc-metadata shimmer-inx-dashboard shimmer-inx-indexer shimmer-inx-mqtt shimmer-inx-participation shimmer-inx-poi shimmer-inx-irc-metadata)
#####################################################################################################
# WATCHDOG
watchdogCronCmd="$swarmPath/watchdog"
watchdogCronJob="*/1 * * * * $watchdogCronCmd"
watchdogModule="$swarmPath/modules/watchdog"
watchdogStateFile="/tmp/watchdog.state"
#####################################################################################################
# DOCKER
dockerPath="/opt/docker"
#####################################################################################################
# PROXY
proxyModulePath="$swarmPath/modules/proxy"
proxyPath="$dockerPath/traefik"

#####################################################################################################
# Node (IOTA)
iotaNodeParserFile="$swarmPath/modules/iota-node/iotaNodeParser"
iotaNodePath="/$dockerPath/iota-node"
iotaNodeModulePath="$swarmPath/modules/iota-node"
iotaNodeConfigParsersPath="$swarmPath/modules/iota-node/iotaNodeConfigParsers"
#####################################################################################################
# Node (Shimmer)
shimmerNodeParserFile="$swarmPath/modules/shimmer-node/shimmerNodeParser"
shimmerNodePath="/$dockerPath/shimmer-node"
shimmerNodeModulePath="$swarmPath/modules/shimmer-node"
shimmerNodeConfigParsersPath="$swarmPath/modules/shimmer-node/shimmerNodeConfigParsers"
#####################################################################################################
# I O T A - I N X
iotaInxDashboardPath="$dockerPath/iota-inx-dashboard"
iotaInxIndexerPath="$dockerPath/iota-inx-indexer"
iotaInxParticipationPath="$dockerPath/iota-inx-participation"
iotaInxMqttPath="$dockerPath/iota-inx-mqtt"
iotaInxPoiPath="$dockerPath/iota-inx-poi"
iotaInxIrcMetadataPath="$dockerPath/iota-inx-irc-metadata"
#####################################################################################################
# S H I M M E R - I N X
shimmerInxDashboardPath="$dockerPath/shimmer-inx-dashboard"
shimmerInxIndexerPath="$dockerPath/shimmer-inx-indexer"
shimmerInxParticipationPath="$dockerPath/shimmer-inx-participation"
shimmerInxMqttPath="$dockerPath/shimmer-inx-mqtt"
shimmerInxPoiPath="$dockerPath/shimmer-inx-poi"
shimmerInxIrcMetadataPath="$dockerPath/shimmer-inx-irc-metadata"
#####################################################################################################
# System
envfile=/etc/environment
licenseFile="$swarmPath/LICENSE"
